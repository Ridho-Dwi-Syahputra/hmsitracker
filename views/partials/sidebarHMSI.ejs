<%
  // âœ… Ambil nama langsung dari session user
  var displayName = (user && (user.nama || user.name)) ? (user.nama || user.name) : 'Admin HMSI';
  var initial = displayName ? displayName.charAt(0).toUpperCase() : 'A';
  var fotoProfile = (user && user.foto_profile) ? ("/" + user.foto_profile) : '/default-profile.png';

  var navItems = [
    { name: 'Dashboard', path: '/hmsi/dashboard' },
    { name: 'Program Kerja', path: '/hmsi/kelola-proker' },
    { name: 'Laporan', path: '/hmsi/laporan' },
    { name: 'Evaluasi DPA', path: '/hmsi/evaluasi' },
    { name: 'Notifikasi', path: '/hmsi/notifikasi' }
  ];
%>

<div id="hmsi-sidebar-root">

  <!-- ðŸ”¹ Mobile top bar -->
  <div class="lg:hidden fixed top-0 left-0 w-full h-14 bg-gradient-to-r from-orange-500 to-orange-600 flex items-center justify-between px-4 z-40">
    <!-- Hamburger -->
    <button id="hmsi-sidebar-toggle" class="hamburger p-2 rounded-lg bg-white shadow-md flex flex-col justify-between w-8 h-8">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    <h1 class="text-white font-semibold text-lg">HMSI Tracker</h1>
  </div>

  

  <!-- ðŸ”¹ Overlay -->
  <div id="hmsi-sidebar-overlay"
    class="hidden fixed inset-0 bg-black bg-opacity-40 z-40 lg:hidden transition-opacity duration-300"></div>

  <!-- ðŸ”¹ Sidebar -->
  <aside id="hmsi-sidebar"
    class="fixed inset-y-0 left-0 w-80 bg-white border-r border-gray-200 flex flex-col 
           transform -translate-x-full lg:translate-x-0 z-50 transition-transform duration-300 ease-in-out">

    <!-- Header (desktop only) -->
    <div class="hidden lg:block p-6 border-b border-gray-100 bg-gradient-to-br from-orange-500 to-orange-600">
      <h1 class="text-xl font-bold text-white tracking-wide">HMSI TRACKER</h1>
      <p class="text-sm text-orange-100 mt-1">Management System</p>
    </div>

    <!-- Profile -->
    <div class="p-6 border-b border-gray-100 bg-white">
      <div class="flex items-center gap-4">
        <!-- Foto Profil (dengan fallback & anti-cache) -->
        <img src="<%= fotoProfile %>?v=<%= Date.now() %>"
             alt="Foto Profil"
             class="w-12 h-12 rounded-full border object-cover shadow-md"
             onerror="this.onerror=null;this.src='/default-profile.png?v=<%= Date.now() %>'">

        <div class="flex-1">
          <h3 class="text-sm font-semibold text-gray-800"><%= displayName %></h3>
          <p class="text-xs text-gray-500 mt-0.5"><%= user.divisi || 'Pengurus HMSI' %></p>
        </div>

        <!-- Gear -->
        <a href="/hmsi/profile" title="Profile"
           class="gear-btn p-2 text-gray-400 hover:text-gray-600 rounded-lg transition-transform duration-300">
          <svg class="gear-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 
              0 002.573 1.066c1.543-.94 3.31.826 2.37 
              2.37a1.724 1.724 0 001.065 2.572c1.756.426 
              1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 
              2.573c.94 1.543-.826 3.31-2.37 
              2.37a1.724 1.724 0 00-2.572 
              1.065c-.426 1.756-2.924 
              1.756-3.35 0a1.724 1.724 
              0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 
              1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 
              0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 
              2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Navigation -->
    <nav id="hmsi-nav" class="flex-1 p-6 overflow-y-auto space-y-1">
      <% for (var i = 0; i < navItems.length; i++) { 
           var item = navItems[i];
           var isActive = false;
           if (typeof activeNav !== 'undefined' && activeNav) {
             var av = String(activeNav).toLowerCase();
             isActive = (av === String(item.name).toLowerCase() || av === String(item.path).toLowerCase());
           }
      %>
        <a href="<%= item.path %>"
          class="nav-item block w-full p-3.5 my-1 rounded-xl text-sm font-medium flex items-center gap-3 <%= isActive ? 'active' : '' %>"
          data-delay="<%= i * 100 %>">
          <span class="w-1.5 h-1.5 rounded-full <%= isActive ? 'bg-orange-500' : 'bg-gray-300' %>"></span>
          <span><%= item.name %></span>
        </a>
      <% } %>
    </nav>

    <!-- Logout -->
    <div class="p-6 border-t border-gray-100">
      <form action="/auth/logout" method="GET">
        <button type="submit"
          class="w-full flex items-center justify-center gap-3 px-4 py-3 text-gray-600 border border-gray-200 rounded-xl bg-white transition-all duration-300 hover:bg-red-50 hover:text-red-600 hover:scale-105 active:scale-95">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 
              01-3 3H6a3 3 0 01-3-3V7a3 
              3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          Keluar
        </button>
      </form>
    </div>
  </aside>
</div>

<!-- Styles (unchanged) -->
<style>
  /* Drawer animation */
  #hmsi-sidebar { will-change: transform; }
  .slide-in { transform: translateX(0) !important; }
  .slide-out { transform: translateX(-100%) !important; }

  /* Hamburger */
  .hamburger .bar {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #374151;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  .hamburger.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Nav-item */
  .nav-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: fadeSlideIn 0.5s ease forwards;
    color: #374151;
    transition: all 0.3s ease, transform 0.2s ease;
  }
  @keyframes fadeSlideIn {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }
  .nav-item:hover {
    transform: translateX(6px) scale(1.02);
    background: linear-gradient(to right, #fff7ed, #fff3e0);
    box-shadow: inset 4px 0 0 #f97316;
  }
  .nav-item.active {
    animation: fadeSlideIn 0.5s ease forwards, pulseOrange 1.5s ease-in-out infinite alternate;
    background: linear-gradient(to right, #fff7ed, #ffedd5);
    color: #ea580c !important;
    font-weight: 600;
    border-right: 3px solid #f97316;
  }
  @keyframes pulseOrange {
    from { box-shadow: inset 4px 0 0 #f97316, 0 0 0 rgba(249,115,22,0.15); }
    to   { box-shadow: inset 6px 0 0 #f97316, 0 0 10px rgba(249,115,22,0.28); }
  }

  /* Gear icon */
  .gear-icon {
    transition: transform 0.4s ease, color 0.3s ease, filter 0.3s ease;
  }
  .gear-btn:hover .gear-icon {
    transform: rotate(90deg) scale(1.2);
    color: #ea580c;
    filter: drop-shadow(0 0 6px rgba(234,88,12,0.5));
  }
  .gear-btn:active .gear-icon {
    animation: gearShake 0.3s ease;
  }
  @keyframes gearShake {
    0% { transform: rotate(0deg) scale(1); }
    25% { transform: rotate(12deg) scale(1.05); }
    50% { transform: rotate(-12deg) scale(1.05); }
    75% { transform: rotate(6deg) scale(1.05); }
    100% { transform: rotate(0deg) scale(1); }
  }
</style>

<!-- Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("hmsi-sidebar");
    const overlay = document.getElementById("hmsi-sidebar-overlay");
    const toggle = document.getElementById("hmsi-sidebar-toggle");

    if (window.innerWidth >= 1024) {
      sidebar.classList.add("slide-in");
    }

    toggle.addEventListener("click", () => {
      const isActive = toggle.classList.toggle("active");
      if (isActive) {
        sidebar.classList.add("slide-in");
        sidebar.classList.remove("slide-out");
        overlay.classList.remove("hidden");
      } else {
        sidebar.classList.remove("slide-in");
        sidebar.classList.add("slide-out");
        overlay.classList.add("hidden");
      }
    });

    overlay.addEventListener("click", () => {
      sidebar.classList.remove("slide-in");
      sidebar.classList.add("slide-out");
      toggle.classList.remove("active");
      overlay.classList.add("hidden");
    });

    document.querySelectorAll(".nav-item").forEach((el, i) => {
      el.style.animationDelay = (i * 100 + 300) + "ms";
    });
  });
</script>
