<!-- ðŸ”¹ Navbar Admin -->
<div class="fixed top-0 left-0 w-full h-14 bg-gradient-to-r from-orange-500 to-orange-600 
            flex items-center justify-between px-4 lg:px-6 z-40 shadow-md">

  <!-- Left Section -->
  <div class="flex items-center gap-3">
    <!-- Hamburger (mobile only) -->
    <button id="admin-sidebar-toggle" 
      class="lg:hidden hamburger p-2 rounded-lg bg-white shadow-md flex flex-col justify-between w-8 h-8">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    <h1 class="text-white font-semibold text-lg tracking-wide">Admin Panel</h1>
  </div>

  <!-- Right Section -->
  <div class="flex items-center gap-4">
    <!-- Foto Profil -->
    <a href="/admin/profile">
      <%
        var fotoProfile = (user && user.foto_profile) 
          ? ('/' + user.foto_profile.replace(/^\/+/, '')) 
          : '/default-profile.png';
      %>
      <img src="<%= fotoProfile %>?v=<%= Date.now() %>"
           alt="Foto Profil"
           class="w-9 h-9 rounded-full border-2 border-white object-cover shadow-sm"
           onerror="this.onerror=null;this.src='/default-profile.png?v=<%= Date.now() %>'">
    </a>
  </div>
</div>

<!-- Styles -->
<style>
  /* Hamburger */
  .hamburger .bar {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #374151;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  .hamburger.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }
</style>
