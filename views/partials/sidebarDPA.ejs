<%
  // Ambil nama user dengan fallback aman
  var displayName = (typeof user !== 'undefined' && (user.name || user.nama)) ? (user.name || user.nama) : 'Admin DPA';
  var initial = (displayName && displayName.length) ? String(displayName).charAt(0).toUpperCase() : 'A';

  // Navigation untuk DPA
  var navItems = [
    { name: 'Dashboard', path: '/dpa/dashboard' },
    { name: 'Daftar Program Kerja', path: '/dpa/lihatProker' },
    { name: 'Daftar Laporan', path: '/dpa/kelolaLaporan' },
    { name: 'Notifikasi', path: '/dpa/dpaNotifikasi' }
  ];
%>

<div id="dpa-sidebar-root">
  <!-- mobile toggle -->
  <button id="dpa-sidebar-toggle"
    class="lg:hidden fixed top-5 left-5 z-50 p-3 bg-white border border-gray-200 rounded-xl shadow-lg"
    aria-label="Toggle sidebar">
    <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
    </svg>
  </button>

  <div id="dpa-sidebar-overlay" class="hidden fixed inset-0 bg-black bg-opacity-30 z-40 lg:hidden"></div>

  <!-- Sidebar -->
  <aside id="dpa-sidebar"
    class="fixed inset-y-0 left-0 w-80 bg-white border-r border-gray-200 flex flex-col transform -translate-x-full lg:translate-x-0 z-50 opacity-0">

    <!-- Header -->
    <div class="p-6 border-b border-gray-100 bg-gradient-to-br from-orange-500 to-orange-600">
      <h1 class="text-xl font-bold text-white tracking-wide">HMSI TRACKER</h1>
      <p class="text-sm text-orange-100 mt-1">Monitoring System</p>
    </div>

    <!-- Profile -->
    <div class="p-6 border-b border-gray-100 bg-white">
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-500 rounded-full flex items-center justify-center text-white font-semibold shadow-md">
          <%= initial %>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-semibold text-gray-800"><%= displayName %></h3>
          <p class="text-xs text-gray-500 mt-0.5">Dewan Pembina Akademik</p>
        </div>
        <a href="/auth/settings" title="Settings"
          class="p-2 text-gray-400 hover:text-gray-600 rounded-lg transition-transform duration-300">
          <!-- gear icon -->
          <svg class="gear-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Navigation -->
    <nav id="dpa-nav" class="flex-1 p-6 overflow-y-auto space-y-1">
      <% for (var i = 0; i < navItems.length; i++) { 
           var item = navItems[i];
           var isActive = false;
           if (typeof activeNav !== 'undefined' && activeNav) {
             var av = String(activeNav).toLowerCase();
             isActive = (av === String(item.name).toLowerCase() || av === String(item.path).toLowerCase());
           }
      %>
        <a href="<%= item.path %>"
          class="nav-item block w-full p-3.5 my-1 rounded-xl text-sm font-medium flex items-center gap-3 <%= isActive ? 'active' : '' %>"
          data-delay="<%= i * 100 %>">
          <span class="w-1.5 h-1.5 rounded-full <%= isActive ? 'bg-orange-500' : 'bg-gray-300' %>"></span>
          <span><%= item.name %></span>
        </a>
      <% } %>
    </nav>

    <!-- Logout -->
    <div class="p-6 border-t border-gray-100">
      <form action="/auth/logout" method="GET">
        <button type="submit"
          class="w-full flex items-center justify-center gap-3 px-4 py-3 text-gray-600 border border-gray-200 rounded-xl bg-white transition-all duration-300 hover:bg-red-50 hover:text-red-600 hover:scale-105 active:scale-95">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          Keluar
        </button>
      </form>
    </div>
  </aside>
</div>

<!-- Animations & Styles -->
<style>
  /* Sidebar show/hide */
  .slide-in {
    animation: slideIn 0.9s ease forwards;
  }
  .slide-out {
    animation: slideOut 0.5s ease forwards;
  }
  @keyframes slideIn {
    from { transform: translateX(-100%); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
  }
  @keyframes slideOut {
    from { transform: translateX(0); opacity: 1; }
    to { transform: translateX(-100%); opacity: 0; }
  }

  /* Staggered nav-item */
  .nav-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: fadeSlideIn 0.5s ease forwards;
    color: #374151; /* text-gray-700 */
  }
  @keyframes fadeSlideIn {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }

  /* Hover / base transitions */
  .nav-item {
    transition: all 0.3s ease, transform 0.2s ease;
  }
  .nav-item:hover {
    transform: translateX(6px) scale(1.02);
    background: linear-gradient(to right, #fff7ed, #fff3e0);
    box-shadow: inset 4px 0 0 #f97316;
  }
  .nav-item:active {
    transform: scale(0.96);
  }

  /* Active state */
  .nav-item.active {
    animation: fadeSlideIn 0.5s ease forwards, pulseOrange 1.5s ease-in-out infinite alternate;
    background: linear-gradient(to right, #fff7ed, #ffedd5);
    color: #ea580c !important;
    font-weight: 600;
    border-right: 3px solid #f97316;
  }

  @keyframes pulseOrange {
    from { box-shadow: inset 4px 0 0 #f97316, 0 0 0 rgba(249,115,22,0.15); }
    to   { box-shadow: inset 6px 0 0 #f97316, 0 0 10px rgba(249,115,22,0.28); }
  }

  /* Gear icon */
  .gear-icon {
    transition: transform 0.4s ease, color 0.3s ease;
  }
  .gear-icon:hover {
    transform: rotate(90deg) scale(1.2);
    color: #ea580c;
  }
  .gear-icon:active {
    animation: gearShake 0.3s ease;
  }
  @keyframes gearShake {
    0% { transform: rotate(0deg) scale(1); }
    25% { transform: rotate(10deg) scale(1.05); }
    50% { transform: rotate(-10deg) scale(1.05); }
    75% { transform: rotate(5deg) scale(1.05); }
    100% { transform: rotate(0deg) scale(1); }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("dpa-sidebar");
    const overlay = document.getElementById("dpa-sidebar-overlay");
    const toggle = document.getElementById("dpa-sidebar-toggle");

    // slide in awal
    sidebar.classList.add("slide-in");

    // toggle sidebar mobile
    toggle.addEventListener("click", () => {
      if (sidebar.classList.contains("slide-in")) {
        sidebar.classList.remove("slide-in");
        sidebar.classList.add("slide-out");
        overlay.classList.add("hidden");
      } else {
        sidebar.classList.remove("slide-out");
        sidebar.classList.add("slide-in");
        overlay.classList.remove("hidden");
      }
    });

    // stagger nav-item delay
    document.querySelectorAll("#dpa-nav .nav-item").forEach((el, i) => {
      el.style.animationDelay = (i * 100 + 300) + "ms";
    });
  });
</script>