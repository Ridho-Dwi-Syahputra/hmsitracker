<%
  var displayName = (typeof user !== 'undefined' && (user.name || user.nama)) ? (user.name || user.nama) : 'Admin';
  var initial = (displayName && displayName.length) ? String(displayName).charAt(0).toUpperCase() : 'A';

  var navItems = [
    { name: 'Dashboard', path: '/admin/dashboard' },
    { name: 'Kelola Kas', path: '/admin/kelola-kas' },
    { name: 'Kelola User', path: '/admin/kelola-user' }
  ];
%>

<div id="admin-sidebar-root">
  <!-- ðŸ”¹ Mobile top bar -->
  <div class="lg:hidden fixed top-0 left-0 w-full h-14 bg-gradient-to-r from-indigo-500 to-indigo-600 flex items-center justify-between px-4 z-40">
    <!-- Hamburger -->
    <button id="admin-sidebar-toggle" class="hamburger p-2 rounded-lg bg-white shadow-md flex flex-col justify-between w-8 h-8">
      <span class="bar"></span>
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
    <h1 class="text-white font-semibold text-lg">Admin Panel</h1>
  </div>

  <!-- ðŸ”¹ Overlay -->
  <div id="admin-sidebar-overlay"
    class="hidden fixed inset-0 bg-black bg-opacity-40 z-40 lg:hidden transition-opacity duration-300"></div>

  <!-- ðŸ”¹ Sidebar -->
  <aside id="admin-sidebar"
    class="fixed inset-y-0 left-0 w-72 bg-white border-r border-gray-200 flex flex-col 
           transform -translate-x-full lg:translate-x-0 z-50 transition-transform duration-300 ease-in-out">

    <!-- Header (desktop only) -->
    <div class="hidden lg:block p-6 border-b border-gray-100 bg-gradient-to-br from-indigo-500 to-indigo-600">
      <h1 class="text-xl font-bold text-white tracking-wide">Admin HMSI</h1>
      <p class="text-sm text-indigo-100 mt-1">Management System</p>
    </div>

    <!-- Profile -->
    <div class="p-6 border-b border-gray-100 bg-white">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-500 rounded-full flex items-center justify-center text-white font-semibold shadow-md">
          <%= initial %>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-semibold text-gray-800"><%= displayName %></h3>
          <p class="text-xs text-gray-500 mt-0.5">Administrator</p>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <nav id="admin-nav" class="flex-1 p-6 overflow-y-auto space-y-1">
      <% for (var i = 0; i < navItems.length; i++) { 
           var item = navItems[i];
           var isActive = false;
           if (typeof activeNav !== 'undefined' && activeNav) {
             var av = String(activeNav).toLowerCase();
             isActive = (av === String(item.name).toLowerCase() || av === String(item.path).toLowerCase());
           }
      %>
        <a href="<%= item.path %>"
          class="nav-item block w-full p-3.5 my-1 rounded-xl text-sm font-medium flex items-center gap-3 <%= isActive ? 'active' : '' %>"
          data-delay="<%= i * 100 %>">
          <span class="w-1.5 h-1.5 rounded-full <%= isActive ? 'bg-indigo-500' : 'bg-gray-300' %>"></span>
          <span><%= item.name %></span>
        </a>
      <% } %>
    </nav>

    <!-- Logout -->
    <div class="p-6 border-t border-gray-100">
      <form action="/auth/logout" method="GET">
        <button type="submit"
          class="w-full flex items-center justify-center gap-3 px-4 py-3 text-gray-600 border border-gray-200 rounded-xl bg-white transition-all duration-300 hover:bg-red-50 hover:text-red-600 hover:scale-105 active:scale-95">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 
              01-3 3H6a3 3 0 01-3-3V7a3 
              3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
          Keluar
        </button>
      </form>
    </div>
  </aside>
</div>

<!-- Styles -->
<style>
  #admin-sidebar { will-change: transform; }
  .slide-in { transform: translateX(0) !important; }
  .slide-out { transform: translateX(-100%) !important; }

  .hamburger .bar {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #374151;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  .hamburger.active .bar:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }
  .hamburger.active .bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger.active .bar:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .nav-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: fadeSlideIn 0.5s ease forwards;
    color: #374151;
    transition: all 0.3s ease, transform 0.2s ease;
  }
  @keyframes fadeSlideIn {
    from { opacity: 0; transform: translateX(-20px); }
    to { opacity: 1; transform: translateX(0); }
  }
  .nav-item:hover {
    transform: translateX(6px) scale(1.02);
    background: linear-gradient(to right, #eef2ff, #e0e7ff);
    box-shadow: inset 4px 0 0 #6366f1;
  }
  .nav-item.active {
    animation: fadeSlideIn 0.5s ease forwards, pulseIndigo 1.5s ease-in-out infinite alternate;
    background: linear-gradient(to right, #eef2ff, #c7d2fe);
    color: #4338ca !important;
    font-weight: 600;
    border-right: 3px solid #6366f1;
  }
  @keyframes pulseIndigo {
    from { box-shadow: inset 4px 0 0 #6366f1, 0 0 0 rgba(99,102,241,0.15); }
    to   { box-shadow: inset 6px 0 0 #6366f1, 0 0 10px rgba(99,102,241,0.28); }
  }
</style>

<!-- Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("admin-sidebar");
    const overlay = document.getElementById("admin-sidebar-overlay");
    const toggle = document.getElementById("admin-sidebar-toggle");

    if (window.innerWidth >= 1024) {
      sidebar.classList.add("slide-in");
    }

    toggle.addEventListener("click", () => {
      const isActive = toggle.classList.toggle("active");
      if (isActive) {
        sidebar.classList.add("slide-in");
        sidebar.classList.remove("slide-out");
        overlay.classList.remove("hidden");
      } else {
        sidebar.classList.remove("slide-in");
        sidebar.classList.add("slide-out");
        overlay.classList.add("hidden");
      }
    });

    overlay.addEventListener("click", () => {
      sidebar.classList.remove("slide-in");
      sidebar.classList.add("slide-out");
      toggle.classList.remove("active");
      overlay.classList.add("hidden");
    });

    document.querySelectorAll(".nav-item").forEach((el, i) => {
      el.style.animationDelay = (i * 100 + 300) + "ms";
    });
  });
</script>
