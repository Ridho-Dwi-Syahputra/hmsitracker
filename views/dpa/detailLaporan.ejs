<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarDPA', { user: user, unreadCount: typeof unreadCount !== 'undefined' ? unreadCount : 0 }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarDPA', { activeNav: 'Daftar Laporan', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-200">

      <!-- Header -->
      <div class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-6 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold">Detail Laporan</h1>
          <p class="text-sm text-orange-100">Informasi lengkap laporan kegiatan HMSI</p>
        </div>
        
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8 space-y-10">

        <!-- Reusable Component -->
        <%
        function boxField(label, value) {
          const displayValue = value || '-';
        %>
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
            <p class="font-medium text-gray-600 mb-2"><%= label %></p>
            <div class="bg-white border border-gray-200 p-3 rounded-lg">
              <p class="text-gray-800 whitespace-pre-line"><%= displayValue %></p>
            </div>
          </div>
        <% } %>

        <!-- Informasi Dasar -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Informasi Dasar</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
              <%= boxField("Judul Laporan", laporan.judul_laporan) %>
            </div>
            <%= boxField("Program Kerja", laporan.namaProker) %>
            <%= boxField("Divisi", laporan.divisi) %>
            <%= boxField("Tanggal Pelaksanaan", laporan.tanggalFormatted) %>
            <%= boxField("Waktu & Tempat", laporan.waktu_tempat) %>
            <div class="md:col-span-2">
              <%= boxField("Deskripsi Kegiatan", laporan.deskripsi_kegiatan) %>
            </div>
          </div>
        </section>

        <!-- Informasi Keuangan -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Informasi Keuangan</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%= boxField("Sumber Dana", laporan.sumber_dana) %>
            <%
              let danaDisplay = '-';
              if (laporan.dana_digunakan) {
                const dana = parseInt(laporan.dana_digunakan);
                if (!isNaN(dana)) {
                  danaDisplay = `Rp ${dana.toLocaleString('id-ID')}`;
                }
              }
            %>
            <%= boxField("Dana Terpakai", danaDisplay) %>
          </div>
        </section>

        <!-- Target Pencapaian -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Target Pencapaian</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%
              const kuantitatifDisplay = laporan.persentase_kuantitatif ? `${laporan.persentase_kuantitatif}%` : '-';
              const kualitatifDisplay = laporan.persentase_kualitatif ? `${laporan.persentase_kualitatif}%` : '-';
            %>
            <%= boxField("Target Kuantitatif", kuantitatifDisplay) %>
            <%= boxField("Target Kualitatif", kualitatifDisplay) %>
          </div>
        </section>

        <!-- Kendala & Solusi -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Kendala dan Solusi</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%= boxField("Kendala", laporan.kendala || "Tidak ada kendala yang dilaporkan") %>
            <%= boxField("Solusi", laporan.solusi || "Tidak ada solusi yang dilaporkan") %>
          </div>
        </section>

        <!-- Sasaran -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Sasaran Kegiatan</h4>
          <%= boxField("Sasaran", laporan.sasaran) %>
        </section>

        <!-- Dokumentasi -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Dokumentasi</h4>
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
            <% if (laporan.dokumentasi) { %>
              <div class="bg-white border border-gray-200 p-3 rounded-lg">
                <% const filePath = `/uploads/laporan/${laporan.dokumentasi}`; %>
<% if (laporan.dokumentasi_mime === 'application/pdf') { %>
  <embed src="<%= filePath %>" type="application/pdf" width="100%" height="500px"/>
<% } else { %>
  <img src="<%= filePath %>" class="w-full max-h-96 object-contain rounded-lg" alt="Dokumentasi"/>
<% } %>
<a href="<%= filePath %>" target="_blank"
  class="mt-4 inline-flex items-center gap-2 px-4 py-2 bg-orange-500 text-white rounded-xl hover:bg-orange-600 transition">
  <i class="fa-solid fa-download"></i> Download Dokumentasi
</a>

              </div>
            <% } else { %>
              <div class="bg-white border border-gray-200 p-3 rounded-lg">
                <p class="text-gray-500 italic">Belum ada dokumentasi</p>
              </div>
            <% } %>
          </div>
        </section>

        <!-- Evaluasi DPA -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Evaluasi DPA</h4>
          
          <% if (evaluasi) { %>
            <!-- Ada Evaluasi -->
            <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <%= boxField("Status Konfirmasi", evaluasi.status_konfirmasi) %>
                <%= boxField("Tanggal Evaluasi", evaluasi.tanggal_evaluasi) %>
              </div>
              <div>
                <%= boxField("Komentar Evaluasi", evaluasi.komentar) %>
              </div>

              <!-- Info Message Status Evaluasi -->
              <% if (evaluasi.status_konfirmasi === 'Selesai') { %>
                <!-- Status Selesai -->
                <div class="p-4 bg-green-50 border border-green-200 rounded-xl flex items-center gap-3">
                  <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-green-800">Evaluasi Telah Selesai</p>
                    <p class="text-xs text-green-600">Evaluasi ini telah selesai diproses.</p>
                  </div>
                </div>
              <% } else if (evaluasi.status_konfirmasi === 'Pending') { %>
                <!-- Status Pending -->
                <div class="p-4 bg-blue-50 border border-blue-200 rounded-xl flex items-center gap-3">
                  <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-blue-800">Evaluasi Sedang Diproses</p>
                    <p class="text-xs text-blue-600">Status evaluasi masih dalam tahap pending. Anda dapat mengubah evaluasi ini.</p>
                  </div>
                </div>
              <% } %>
            </div>
          <% } else { %>
            <!-- Belum Ada Evaluasi -->
            <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-xl flex items-center gap-3">
              <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-yellow-800">Belum Ada Evaluasi</p>
                <p class="text-xs text-yellow-600">Laporan ini belum dievaluasi. Silakan klik tombol di bawah untuk memberikan evaluasi.</p>
              </div>
            </div>
          <% } %>
        </section>

        <!-- Tambahkan section ini setelah section "Evaluasi DPA" dan sebelum tombol evaluasi -->

<!-- Komentar Balasan HMSI -->
<section>
  <h4 class="text-lg font-semibold text-gray-700 mb-4 flex items-center gap-2">
    <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 14h.01M16 10h.01M21 16a2 2 0 0 1-2 2H7l-4 4V6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
    </svg>
    Komentar Balasan dari HMSI
  </h4>
  
  <% if (evaluasi && evaluasi.komentar_hmsi) { %>
    <!-- Ada Komentar dari HMSI -->
    <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
      <div class="bg-orange-50 border border-orange-200 p-4 rounded-lg">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
            <i class="fa-solid fa-comment-dots text-orange-600"></i>
          </div>
          <div class="flex-1">
            <p class="text-sm font-semibold text-gray-700 mb-1">Komentar Tambahan HMSI</p>
            <p class="text-gray-800 whitespace-pre-line"><%= evaluasi.komentar_hmsi %></p>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <!-- Belum Ada Komentar dari HMSI -->
    <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
      <div class="bg-white border border-gray-200 p-4 rounded-lg flex items-center gap-3">
        <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center flex-shrink-0">
          <i class="fa-solid fa-comment-slash text-gray-400"></i>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-500">Belum ada komentar balasan dari HMSI</p>
          <p class="text-xs text-gray-400 mt-1">HMSI belum memberikan komentar tambahan untuk evaluasi ini.</p>
        </div>
      </div>
    </div>
  <% } %>
</section>

<!-- ================= Tombol Aksi ================= -->
<div class="pt-6 border-t flex gap-4 justify-end">
  <a href="/dpa/kelolaLaporan"
     class="px-8 py-3 border rounded-xl text-sm bg-white text-gray-700 hover:shadow-md transition">
     Kembali
  </a>

  <% if (!evaluasi || evaluasi.status_konfirmasi !== 'Selesai') { %>
    <a href="/dpa/laporan/<%= laporan.id_laporan %>/evaluasi"
       class="flex items-center gap-2 px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold hover:bg-orange-600 transition transform hover:scale-105 active:scale-95">
      <i class="fa-solid fa-edit"></i>
      <span><%= evaluasi ? 'Edit Evaluasi' : 'Beri Evaluasi' %></span>
    </a>
  <% } %>
</div>


      </div>
    </div>
  </main>

  <!-- Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Detail laporan DPA loaded');
    });
  </script>

</body>
</html>