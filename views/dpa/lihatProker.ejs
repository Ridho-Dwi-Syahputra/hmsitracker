<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Daftar Program Kerja</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'Program Kerja', user: user }) %>

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- Wrapper -->
  <div class="lg:ml-80 px-6 pt-20 pb-8">
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">
      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Daftar Program Kerja</h1>
        <p class="text-sm text-orange-100">Kelola status dan detail program kerja</p>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8">
        <table class="w-full border-collapse">
          <thead>
            <tr class="bg-gray-100">
              <th class="px-4 py-3 border text-left">#</th>
              <th class="px-4 py-3 border text-left">Nama Proker</th>
              <th class="px-4 py-3 border text-left">Status</th>
              <th class="px-4 py-3 border text-center">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% proker.forEach((item, index) => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-3 border"><%= index + 1 %></td>
                <td class="px-4 py-3 border"><%= item.nama_proker %></td>
                <td class="px-4 py-3 border"><%= item.status %></td>
                <td class="px-4 py-3 border text-center space-x-2">
                  <button onclick="ubahStatus('<%= item.id_proker %>', 'Selesai')" class="bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded">Selesai</button>
                  <button onclick="ubahStatus('<%= item.id_proker %>', 'Revisi')" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded">Revisi</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- ✅ Success Modal -->
  <div id="successModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="successModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Berhasil!</h3>
        <p id="successMessage" class="text-gray-600 mb-6">Status program kerja berhasil diperbarui.</p>
        <button onclick="hideModal('successModal', true)" class="w-full bg-green-500 hover:bg-green-600 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
          OK
        </button>
      </div>
    </div>
  </div>

  <!-- ❌ Error Modal -->
  <div id="errorModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="errorModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Gagal!</h3>
        <p id="errorMessage" class="text-gray-600 mb-6">Terjadi kesalahan, silakan coba lagi.</p>
        <button onclick="hideModal('errorModal')" class="w-full bg-red-500 hover:bg-red-600 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
          Tutup
        </button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <script>
    // === Modal Function ===
    function showModal(modalId) {
      const modal = document.getElementById(modalId);
      const content = document.getElementById(modalId + 'Content');
      modal.classList.remove('hidden');
      setTimeout(() => {
        content.classList.remove('scale-95', 'opacity-0');
        content.classList.add('scale-100', 'opacity-100');
      }, 10);
    }

    function hideModal(modalId, reload = false) {
      const modal = document.getElementById(modalId);
      const content = document.getElementById(modalId + 'Content');
      content.classList.remove('scale-100', 'opacity-100');
      content.classList.add('scale-95', 'opacity-0');
      setTimeout(() => {
        modal.classList.add('hidden');
        if (reload) location.reload();
      }, 300);
    }

    // === Ubah Status Function ===
    function ubahStatus(id, status) {
      if (!confirm(`Apakah Anda yakin ingin mengubah status menjadi ${status}?`)) return;

      fetch(`/dpa/proker/${id}/status`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ status })
      })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          document.getElementById("successMessage").textContent = data.message || "Status berhasil diperbarui.";
          showModal("successModal");
        } else {
          document.getElementById("errorMessage").textContent = data.message || "Terjadi kesalahan.";
          showModal("errorModal");
        }
      })
      .catch(err => {
        document.getElementById("errorMessage").textContent = "Gagal terhubung ke server.";
        showModal("errorModal");
      });
    }
  </script>
</body>
</html>
