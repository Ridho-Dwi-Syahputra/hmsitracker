<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- FontAwesome -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    .table-fixed { table-layout: fixed; }
    .table-fixed th:nth-child(1) { width: 50px; }   /* No */
    .table-fixed th:nth-child(2) { width: 30%; }    /* Nama Program */
    .table-fixed th:nth-child(3) { width: 15%; }    /* Divisi */
    .table-fixed th:nth-child(4) { width: 20%; }    /* Penanggung Jawab */
    .table-fixed th:nth-child(5) { width: 15%; }    /* Status */
    .table-fixed th:nth-child(6) { width: 120px; }  /* Aksi */
    
    .text-ellipsis {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  </style>
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- ✅ Navbar -->
  <%- include('../partials/navbarDPA', { user: user, unreadCount: unreadCount }) %>
  
  <!-- ✅ Sidebar -->
  <%- include('../partials/sidebarDPA', { user: user, activeNav: 'Daftar Program Kerja' }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-7xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-6 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold">Daftar Program Kerja</h1>
          <p class="text-sm text-orange-100">Lihat & kelola program kerja HMSI</p>
        </div>
      </div>

      <!-- Body Card -->
      <div class="p-6 sm:p-8">

        <!-- Search & Filter -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6 flex-wrap">

          <!-- Search -->
          <div class="flex-1">
            <div class="relative">
              <input id="searchInput" type="text" placeholder="Cari program kerja..."
                class="w-full pl-10 pr-4 py-3 border rounded-xl text-sm
                       border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-500
                       focus:bg-orange-50 focus:text-orange-700 
                       placeholder-gray-400 focus:placeholder-orange-400
                       transition-all duration-300">
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <!-- Dropdown Status -->
          <div class="relative">
            <button id="dropdownButton" 
              class="flex items-center justify-between gap-2 px-4 py-3 border border-gray-300 rounded-xl text-sm bg-white
                     hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
              <span id="dropdownLabel">Semua Status</span>
              <i class="fa-solid fa-chevron-down text-orange-500"></i>
            </button>
            <div id="dropdownMenu" 
              class="hidden absolute right-0 mt-2 w-48 bg-white border border-orange-200 rounded-lg shadow-lg z-10">
              <ul class="text-sm text-gray-700">
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="all">Semua Status</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Belum Dimulai">Belum Dimulai</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Sedang Berjalan">Sedang Berjalan</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Selesai">Selesai</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Gagal">Gagal</button></li>
              </ul>
            </div>
          </div>

          <!-- Dropdown Divisi -->
          <div class="relative">
            <button id="divisiDropdownBtn" 
              class="flex items-center justify-between gap-2 px-4 py-3 border border-gray-300 rounded-xl text-sm bg-white
                     hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
              <span id="divisiDropdownLabel">Semua Divisi</span>
              <i class="fa-solid fa-chevron-down text-orange-500"></i>
            </button>
            <div id="divisiDropdownMenu" 
              class="hidden absolute right-0 mt-2 w-48 bg-white border border-orange-200 rounded-lg shadow-lg z-10">
              <ul class="text-sm text-gray-700">
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="all">Semua Divisi</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Internal">Internal</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Medkraf">Medkraf</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Eksternal">Eksternal</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Bikraf">Bikraf</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="PSI">PSI</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="PSDM">PSDM</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="RTK">RTK</button></li>
              </ul>
            </div>
          </div>
        </div> <!-- ⬅️ penutup flex filter -->

        <!-- Tabel -->
        <div class="overflow-x-auto bg-white-50 p-2 shadow-sm rounded-xl">
          <table class="min-w-full text-sm text-center border border-orange-200 rounded-xl overflow-hidden border-separate border-spacing-0 table-fixed">
            <thead class="bg-orange-100 text-gray-700">
              <tr>
                <th class="py-3 px-4 font-semibold border border-orange-200">No</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Nama Program</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Divisi</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Penanggung Jawab</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Status</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Aksi</th>
              </tr>
            </thead>
            <tbody id="programTable">
              <% if (programs && programs.length > 0) { %>
                <% programs.forEach((proker, index) => { %>
                  <tr class="hover:bg-orange-50 transition">
                    <td class="py-3 px-4 border border-orange-100"><%= index + 1 %></td>
                    <td class="py-3 px-4 font-medium text-gray-800 border border-orange-100 text-left">
                      <div class="text-ellipsis" title="<%= proker.namaProker %>"><%= proker.namaProker %></div>
                    </td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100" data-col="divisi">
                      <div class="text-ellipsis" title="<%= proker.divisi %>"><%= proker.divisi %></div>
                    </td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100">
                      <div class="text-ellipsis" title="<%= proker.penanggungJawab %>"><%= proker.penanggungJawab %></div>
                    </td>
                    <td class="py-3 px-4 border border-orange-100" data-col="status">
                      <% if (proker.status === "Belum Dimulai") { %>
                        <span class="px-3 py-1 text-xs rounded-full bg-yellow-100 text-yellow-700 font-medium whitespace-nowrap"><%= proker.status %></span>
                      <% } else if (proker.status === "Sedang Berjalan") { %>
                        <span class="px-3 py-1 text-xs rounded-full bg-blue-100 text-blue-700 font-medium whitespace-nowrap"><%= proker.status %></span>
                      <% } else if (proker.status === "Selesai") { %>
                        <span class="px-3 py-1 text-xs rounded-full bg-green-100 text-green-700 font-medium whitespace-nowrap"><%= proker.status %></span>
                      <% } else if (proker.status === "Gagal") { %>
                        <span class="px-3 py-1 text-xs rounded-full bg-red-100 text-red-700 font-medium whitespace-nowrap"><%= proker.status %></span>
                      <% } else { %>
                        <span class="px-3 py-1 text-xs rounded-full bg-gray-100 text-gray-600 font-medium whitespace-nowrap"><%= proker.status %></span>
                      <% } %>
                    </td>
                    <td class="py-3 px-4 border border-orange-100">
                      <div class="flex justify-center items-center gap-2">
                        <!-- Detail Button Only -->
                        <a href="/dpa/proker/<%= proker.id %>/detail" 
                           class="inline-flex items-center justify-center w-8 h-8 rounded-lg bg-orange-100 text-orange-600 hover:bg-orange-200 hover:text-orange-700 transition-all duration-200" 
                           title="Lihat Detail">
                          <i class="fa-solid fa-eye text-sm"></i>
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="py-8 text-center text-gray-500 border border-orange-100">
                    <div class="flex flex-col items-center gap-2">
                      <i class="fa-solid fa-folder-open text-2xl text-gray-300"></i>
                      <span>Tidak ada program kerja ditemukan.</span>
                    </div>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center items-center gap-2 mt-6" id="pagination">
          <button id="prevPage" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 disabled:opacity-50 disabled:cursor-not-allowed">Prev</button>
          <span id="pageInfo" class="text-gray-700 mx-4"></span>
          <button id="nextPage" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 disabled:opacity-50 disabled:cursor-not-allowed">Next</button>
        </div>

      </div>
    </div>
  </main>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const searchInput = document.getElementById("searchInput");
      const tbody = document.getElementById("programTable");
      let rows = Array.from(tbody?.querySelectorAll("tr") || []);

      // Dropdown status
      const statusBtn = document.getElementById("dropdownButton");
      const statusMenu = document.getElementById("dropdownMenu");
      const statusLabel = document.getElementById("dropdownLabel");

      // Dropdown divisi
      const divisiBtn = document.getElementById("divisiDropdownBtn");
      const divisiMenu = document.getElementById("divisiDropdownMenu");
      const divisiLabel = document.getElementById("divisiDropdownLabel");

      const rowsPerPage = 10;
      let currentPage = 1;

      // Close dropdowns when clicking outside
      document.addEventListener("click", (e) => {
        if (!statusBtn.contains(e.target)) statusMenu.classList.add("hidden");
        if (!divisiBtn.contains(e.target)) divisiMenu.classList.add("hidden");
      });

      // Toggle dropdown status
      statusBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        statusMenu.classList.toggle("hidden");
        divisiMenu.classList.add("hidden");
      });

      // Toggle dropdown divisi
      divisiBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        divisiMenu.classList.toggle("hidden");
        statusMenu.classList.add("hidden");
      });

      // Dropdown select
      statusMenu.querySelectorAll("button").forEach(btn => {
        btn.addEventListener("click", () => {
          statusLabel.textContent = btn.dataset.value === "all" ? "Semua Status" : btn.dataset.value;
          statusMenu.classList.add("hidden");
          currentPage = 1;
          filterRows();
        });
      });

      divisiMenu.querySelectorAll("button").forEach(btn => {
        btn.addEventListener("click", () => {
          divisiLabel.textContent = btn.dataset.value === "all" ? "Semua Divisi" : btn.dataset.value;
          divisiMenu.classList.add("hidden");
          currentPage = 1;
          filterRows();
        });
      });

      function filterRows() {
        const searchValue = searchInput.value.toLowerCase();
        const selectedStatus = statusLabel.textContent.trim();
        const selectedDivisi = divisiLabel.textContent.trim();

        rows.forEach(row => {
          const namaProker = row.cells[1]?.innerText.toLowerCase() || "";
          const divisi = row.querySelector("td[data-col='divisi']")?.innerText.trim() || "";
          const pj = row.cells[3]?.innerText.toLowerCase() || "";
          const status = row.querySelector("td[data-col='status']")?.innerText.trim() || "";

          let matchSearch = namaProker.includes(searchValue) || pj.includes(searchValue) || divisi.toLowerCase().includes(searchValue);
          let matchStatus = selectedStatus === "Semua Status" || status === selectedStatus;
          let matchDivisi = selectedDivisi === "Semua Divisi" || divisi === selectedDivisi;

          row.dataset.visible = (matchSearch && matchStatus && matchDivisi) ? "true" : "false";
        });

        paginate();
      }

      function paginate() {
        let visibleRows = rows.filter(row => row.dataset.visible !== "false");
        let totalPages = Math.ceil(visibleRows.length / rowsPerPage);
        if (currentPage > totalPages) currentPage = totalPages || 1;

        rows.forEach(row => row.style.display = "none");
        visibleRows.forEach((row, index) => {
          if (index >= (currentPage-1)*rowsPerPage && index < currentPage*rowsPerPage) {
            row.style.display = "";
          }
        });

        document.getElementById("pageInfo").textContent = `Halaman ${currentPage} dari ${totalPages || 1}`;
        document.getElementById("prevPage").disabled = currentPage === 1;
        document.getElementById("nextPage").disabled = currentPage === totalPages || totalPages === 0;
      }

      searchInput.addEventListener("input", () => { currentPage = 1; filterRows(); });
      document.getElementById("prevPage").addEventListener("click", () => { if (currentPage > 1) { currentPage--; paginate(); } });
      document.getElementById("nextPage").addEventListener("click", () => {
        let visibleRows = rows.filter(row => row.dataset.visible !== "false");
        let totalPages = Math.ceil(visibleRows.length / rowsPerPage);
        if (currentPage < totalPages) { currentPage++; paginate(); }
      });

      rows.forEach(row => row.dataset.visible = "true");
      filterRows();
    });
  </script>
</body>
</html>
