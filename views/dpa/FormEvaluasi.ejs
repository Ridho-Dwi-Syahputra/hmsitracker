<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Evaluasi Laporan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarDPA', { user: user, unreadCount: unreadCount }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarDPA', { activeNav: 'Laporan', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow animate-fade-in">

    <div class="max-w-3xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-6 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold">Form Evaluasi Laporan</h1>
          <p class="text-sm text-orange-100">Detail laporan & evaluasi</p>
        </div>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8 space-y-6">
        <!-- Alert -->
        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <!-- Info Laporan -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-1">Judul Laporan</label>
          <input type="text" readonly class="w-full px-4 py-3 border rounded-xl bg-gray-50" value="<%= laporan.judul_laporan || '-' %>">
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-1">Program Kerja</label>
          <input type="text" readonly class="w-full px-4 py-3 border rounded-xl bg-gray-50" value="<%= laporan.namaProker || '-' %>">
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-1">Divisi HMSI</label>
          <input type="text" readonly class="w-full px-4 py-3 border rounded-xl bg-gray-50" value="<%= laporan.divisi || '-' %>">
        </div>

        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-1">Tanggal Upload</label>
          <input type="text" readonly class="w-full px-4 py-3 border rounded-xl bg-gray-50" value="<%= laporan.tanggalFormatted || '-' %>">
        </div>

        <!-- Preview Dokumentasi -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Preview Dokumentasi</h4>
          <% if (laporan.dokumentasi) { %>
            <% if (laporan.dokumentasi_mime === 'application/pdf') { %>
              <embed src="/uploads/<%= laporan.dokumentasi %>" type="application/pdf" width="100%" height="420px" class="rounded-lg border"/>
            <% } else if (laporan.dokumentasi_mime.startsWith('image/')) { %>
              <img src="/uploads/<%= laporan.dokumentasi %>" alt="Dokumentasi" class="w-full max-h-96 object-contain rounded-lg border shadow"/>
            <% } else { %>
              <div class="p-4 bg-gray-50 border rounded-lg flex items-center justify-between">
                <div>
                  <p class="font-medium"><%= laporan.dokumentasi %></p>
                  <p class="text-xs text-gray-500">Tipe file tidak dapat dipreview, silakan unduh.</p>
                </div>
                <a href="/uploads/<%= laporan.dokumentasi %>" class="px-3 py-2 bg-orange-100 text-orange-700 rounded-lg text-sm font-medium">Download</a>
              </div>
            <% } %>
          <% } else { %>
            <p class="text-gray-500 text-sm">Tidak ada dokumentasi diunggah.</p>
          <% } %>
        </div>

        <!-- Komentar HMSI -->
        <% if (laporan.komentar_hmsi) { %>
          <div>
            <h4 class="text-lg font-semibold text-teal-600 mb-3">Komentar HMSI</h4>
            <div class="p-4 bg-teal-50 border border-teal-200 rounded-xl">
              <p class="text-gray-800 whitespace-pre-line"><%= laporan.komentar_hmsi %></p>
            </div>
          </div>
        <% } %>

        <!-- Form Evaluasi -->
        <form action="/dpa/laporan/<%= laporan.id_laporan %>/evaluasi" method="POST" class="space-y-6">
          <!-- Komentar -->
          <div>
            <label for="komentar" class="block text-sm font-semibold text-gray-700">Komentar Evaluasi</label>
            <textarea id="komentar" name="komentar" rows="4" required
              class="mt-2 w-full px-4 py-3 border rounded-xl shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 bg-orange-50"></textarea>
          </div>

          <!-- Dropdown Status -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Status Evaluasi</label>
            <div class="relative w-60">
              <button id="dropdownButton" type="button"
                class="flex items-center justify-between w-full px-4 py-3 border rounded-xl text-sm bg-white hover:border-orange-500 focus:ring-2 focus:ring-orange-500 transition">
                <span id="dropdownLabel">Pilih Status</span>
              </button>
              <div id="dropdownMenu" class="hidden absolute left-0 mt-2 w-full bg-white border rounded-xl shadow-lg z-10">
                <ul class="text-sm text-gray-700">
                  <li><button type="button" class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Revisi">Revisi</button></li>
                  <li><button type="button" class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Selesai">Selesai</button></li>
                </ul>
              </div>
            </div>
            <input type="hidden" name="status_konfirmasi" id="statusInput" required>
          </div>

          <!-- Hidden evaluator -->
          <input type="hidden" name="id_anggota" value="<%= user.id_anggota %>">

          <!-- Tombol aksi -->
          <div class="flex justify-end items-center gap-3 pt-4 border-t">
            <a href="/dpa/laporan/<%= laporan.id_laporan %>" 
               class="px-6 py-3 bg-gray-400 text-white rounded-xl hover:bg-gray-500 transition">Batal</a>
            <button type="submit" 
               class="px-6 py-3 bg-orange-500 text-white rounded-xl font-semibold hover:bg-orange-600 transition">Simpan Evaluasi</button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <!-- Script Dropdown -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const dropdownButton = document.getElementById("dropdownButton");
      const dropdownMenu = document.getElementById("dropdownMenu");
      const dropdownLabel = document.getElementById("dropdownLabel");
      const statusInput = document.getElementById("statusInput");

      dropdownButton.addEventListener("click", () => dropdownMenu.classList.toggle("hidden"));

      dropdownMenu.querySelectorAll("button").forEach(btn => {
        btn.addEventListener("click", () => {
          statusInput.value = btn.dataset.value;
          dropdownLabel.textContent = btn.dataset.value;
          dropdownMenu.classList.add("hidden");
        });
      });
    });
  </script>

  <!-- Animasi -->
  <style>
    @keyframes fadeIn { from {opacity:0;} to {opacity:1;} }
    .animate-fade-in { animation: fadeIn 0.6s ease-out forwards; }
  </style>

</body>
</html>
