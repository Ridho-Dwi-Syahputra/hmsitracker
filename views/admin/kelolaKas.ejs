<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarAdmin', { user: user }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarAdmin', { user: user, activeNav: activeNav }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header -->
      <div class="bg-orange-500 text-white px-6 py-6 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold"><%= title %></h1>
          <p class="text-sm text-orange-100">Kelola pemasukan kas HMSI</p>
        </div>
        <button id="btnTambahKas"
          class="flex items-center space-x-2 px-4 py-2 bg-white text-orange-600 rounded-lg font-semibold
                 transition-all duration-200 hover:bg-orange-100 hover:scale-105 active:scale-95">
          <i class="fa-solid fa-plus"></i>
          <span>Tambah Pemasukan</span>
        </button>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8">

        <!-- Search -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
          <div class="flex-1">
            <div class="relative">
              <input id="searchInput" type="text" placeholder="Cari pemasukan..."
                class="w-full pl-10 pr-4 py-3 border rounded-xl text-sm
                       border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-500
                       focus:bg-orange-50 focus:text-orange-700 
                       placeholder-gray-400 focus:placeholder-orange-400
                       transition-all duration-300">
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>
        </div>

        <% if (!pemasukan || pemasukan.length === 0) { %>
          <div class="flex flex-col items-center space-y-4 py-20">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div class="text-center">
              <div class="text-xl font-semibold text-gray-800 mb-2">Belum ada pemasukan</div>
              <div class="text-gray-500">Klik "Tambah Pemasukan" untuk menambah dana kas</div>
            </div>
          </div>
        <% } else { %>
          <div class="overflow-x-auto bg-white-50 p-2 shadow-sm rounded-xl">
            <table class="min-w-full text-sm text-center border border-orange-200 rounded-xl overflow-hidden border-separate border-spacing-0">
              <thead class="bg-orange-100 text-gray-700">
                <tr>
                  <th class="py-3 px-4 font-semibold border border-orange-200">No</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Tanggal</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Sumber</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Jumlah (Rp)</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Aksi</th>
                </tr>
              </thead>
              <tbody id="kasTable">
                <% pemasukan.forEach((item, i) => { %>
                  <tr class="hover:bg-orange-50 transition">
                    <td class="py-3 px-4 border border-orange-100"><%= i + 1 %></td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100"><%= item.tanggalFormatted %></td>
                    <td class="py-3 px-4 text-gray-800 font-medium border border-orange-100"><%= item.sumber %></td>
                    <td class="py-3 px-4 text-gray-800 font-semibold border border-orange-100">
                      Rp <%= item.jumlah.toLocaleString('id-ID') %>
                    </td>
                    <td class="py-3 px-4 flex justify-center gap-4 border border-orange-100">
                      <button
                        class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110 btnEditKas"
                        data-id="<%= item.id_keuangan %>"
                        data-tanggal="<%= item.tanggalFormatted %>"
                        data-sumber="<%= item.sumber %>"
                        data-jumlah="<%= item.jumlah %>"
                        title="Edit">
                        <i class="fa-solid fa-pen-to-square text-lg"></i>
                      </button>
                      <form action="/admin/keuangan/delete/<%= item.id_keuangan %>" method="POST"
                        onsubmit="return confirm('Yakin ingin menghapus data ini?')">
                        <button type="submit" class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110" title="Hapus">
                          <i class="fa-solid fa-trash text-lg"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
                <tr class="bg-orange-50 font-bold">
                  <td colspan="3" class="py-3 px-4 text-right border-t border-orange-300">Total</td>
                  <td class="py-3 px-4 text-orange-700 text-center border-t border-orange-300">
                    Rp <%= totalPemasukan.toLocaleString('id-ID') %>
                  </td>
                  <td class="border-t border-orange-300"></td>
                </tr>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <!-- Modal Tambah/Edit -->
  <div id="kasModal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl w-96 p-6 relative animate-fadeIn">
      <h2 id="modalTitle" class="text-xl font-bold text-gray-800 mb-4">Tambah Pemasukan</h2>
      <form id="kasForm" method="POST" action="/admin/keuangan/tambah">
        <input type="hidden" name="id_keuangan" id="idKasInput">
        <div class="mb-4">
          <label for="tanggal" class="block text-sm font-medium text-gray-700 mb-2">Tanggal</label>
          <input type="date" id="tanggal" name="tanggal" required
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div class="mb-4">
          <label for="sumber" class="block text-sm font-medium text-gray-700 mb-2">Sumber</label>
          <input type="text" id="sumber" name="sumber" required
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div class="mb-4">
          <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-2">Jumlah Dana (Rp)</label>
          <input type="number" id="jumlah" name="jumlah" required min="0"
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" id="btnCancel"
            class="px-4 py-2 rounded-lg border border-gray-300 text-gray-600 hover:bg-gray-100 transition">Batal</button>
          <button type="submit"
            class="px-4 py-2 rounded-lg bg-orange-500 text-white font-semibold hover:bg-orange-600 transition">Simpan</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const modal = document.getElementById("kasModal");
      const form = document.getElementById("kasForm");
      const title = document.getElementById("modalTitle");
      const idField = document.getElementById("idKasInput");
      const tglField = document.getElementById("tanggal");
      const sumberField = document.getElementById("sumber");
      const jumlahField = document.getElementById("jumlah");

      document.getElementById("btnTambahKas")?.addEventListener("click", () => {
        modal.classList.remove("hidden");
        title.textContent = "Tambah Pemasukan";
        form.action = "/admin/keuangan/tambah";
        idField.value = "";
        tglField.value = "";
        sumberField.value = "";
        jumlahField.value = "";
      });

      document.querySelectorAll(".btnEditKas").forEach(btn => {
        btn.addEventListener("click", () => {
          modal.classList.remove("hidden");
          title.textContent = "Edit Pemasukan";
          form.action = "/admin/keuangan/edit/" + btn.dataset.id;
          idField.value = btn.dataset.id;
          tglField.value = btn.dataset.tanggal;
          sumberField.value = btn.dataset.sumber;
          jumlahField.value = btn.dataset.jumlah;
        });
      });

      document.getElementById("btnCancel").addEventListener("click", () => modal.classList.add("hidden"));
      modal.addEventListener("click", (e) => {
        if (e.target === modal) modal.classList.add("hidden");
      });

      const searchInput = document.getElementById("searchInput");
      const rows = document.querySelectorAll("#kasTable tr:not(.bg-orange-50)");
      searchInput.addEventListener("input", () => {
        const query = searchInput.value.toLowerCase();
        rows.forEach(r => {
          const match = r.textContent.toLowerCase().includes(query);
          r.style.display = match ? "" : "none";
        });
      });
    });
  </script>

  <style>
    @keyframes fadeIn { from {opacity: 0; transform: scale(0.95);} to {opacity: 1; transform: scale(1);} }
    .animate-fadeIn { animation: fadeIn 0.25s ease-out; }
  </style>
</body>
</html>
