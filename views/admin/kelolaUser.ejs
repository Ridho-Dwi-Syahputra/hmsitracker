<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <%- include('../partials/navbarAdmin', { user: user }) %>

  <%- include('../partials/sidebarAdmin', { activeNav: 'users', user: user }) %>

  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-7xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <div class="bg-orange-500 text-white px-6 py-6 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold">Kelola User</h1>
          <p class="text-sm text-orange-100">Daftar semua user HMSI dan DPA</p>
        </div>
        <a href="/admin/user/tambah" 
          class="flex items-center space-x-2 px-4 py-2 bg-white text-orange-600 rounded-lg font-semibold
                 transition-all duration-200 hover:bg-orange-100 hover:scale-105 active:scale-95">
          <i class="fa-solid fa-plus"></i>
          <span>Tambah User</span>
        </a>
      </div>

      <div class="p-6 sm:p-8">

        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
          <div class="flex-1">
            <div class="relative">
              <input id="searchInput" type="text" placeholder="Cari user..."
                class="w-full pl-10 pr-4 py-3 border rounded-xl text-sm
                       border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-500
                       focus:bg-orange-50 focus:text-orange-700 
                       placeholder-gray-400 focus:placeholder-orange-400
                       transition-all duration-300">
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <div class="relative">
            <button id="roleDropdownBtn"
              class="flex items-center justify-between gap-2 px-4 py-3 border border-gray-300 rounded-xl text-sm bg-white
                     hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
              <span id="roleDropdownLabel">Semua Role</span>
              <i class="fa-solid fa-chevron-down text-orange-500"></i>
            </button>
            <div id="roleDropdownMenu" 
              class="hidden absolute right-0 mt-2 w-48 bg-white border border-orange-200 rounded-lg shadow-lg z-10">
              <ul class="text-sm text-gray-700">
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-role="all">Semua Role</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-role="HMSI">HMSI</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-role="DPA">DPA</button></li>
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-role="Admin">Admin</button></li>
              </ul>
            </div>
          </div>

          <div id="divisiFilterWrapper" class="relative hidden">
            <button id="divisiDropdownBtn"
              class="flex items-center justify-between gap-2 px-4 py-3 border border-gray-300 rounded-xl text-sm bg-white
                     hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
              <span id="divisiDropdownLabel">Semua Divisi</span>
              <i class="fa-solid fa-chevron-down text-orange-500"></i>
            </button>
            <div id="divisiDropdownMenu" 
                 class="hidden absolute right-0 mt-2 w-48 bg-white border border-orange-200 rounded-lg shadow-lg z-10 max-h-56 overflow-y-auto">
              <ul class="text-sm text-gray-700">
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-divisi="all">Semua Divisi</button></li>
                <% divisiList.forEach(d => { %>
                  <li>
                    <button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-divisi="<%= d.nama_divisi %>">
                      <%= d.nama_divisi %>
                    </button>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>

        <div class="overflow-x-auto bg-white-50 p-2 shadow-sm rounded-xl">
          <table class="min-w-full text-sm text-center border border-orange-200 rounded-xl overflow-hidden border-separate border-spacing-0">
            <thead class="bg-orange-100 text-gray-700">
              <tr>
                <th class="py-3 px-4 font-semibold border border-orange-200">NIM</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Nama</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Email</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Role</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Divisi</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Aksi</th>
              </tr>
            </thead>
            <tbody id="userTable">
              <% if (!users || users.length === 0) { %>
                <tr>
                  <td colspan="6" class="py-8 text-gray-500 text-center border border-orange-100">
                    Belum ada user terdaftar
                  </td>
                </tr>
              <% } else { %>
                <% users.forEach(u => { %>
                  <tr class="hover:bg-orange-50 transition" 
                      data-role="<%= u.role %>" data-divisi="<%= u.nama_divisi || '' %>">
                    <td class="py-3 px-4 border border-orange-100"><%= u.id_anggota %></td>
                    <td class="py-3 px-4 font-medium text-gray-800 border border-orange-100 text-left"><%= u.nama %></td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100 text-left"><%= u.email %></td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100"><%= u.role %></td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100"><%= u.nama_divisi || '-' %></td>
                    <td class="py-3 px-4 flex justify-center gap-4 border border-orange-100">
                      <a href="/admin/user/edit/<%= u.id_anggota %>" 
                         class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110" title="Edit">
                        <i class="fa-solid fa-pen-to-square text-lg"></i>
                      </a>
                      <form action="/admin/user/delete/<%= u.id_anggota %>" method="POST" class="inline">
                        <button type="submit" 
                                class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110 delete-btn" 
                                title="Hapus"
                                data-id="<%= u.id_anggota %>"
                                data-nama="<%= u.nama %>">
                          <i class="fa-solid fa-trash text-lg"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

        <div class="flex justify-center items-center gap-2 mt-6" id="pagination">
          <button id="prevPage" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 disabled:opacity-50">Prev</button>
          <span id="pageInfo" class="text-gray-700"></span>
          <button id="nextPage" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 disabled:opacity-50">Next</button>
        </div>

      </div>
    </div>
  </main>

  <div id="cannotDeleteModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="cannotDeleteModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Aksi Dibatalkan</h3>
        <p id="cannotDeleteMessage" class="text-gray-600 mb-6">User ini tidak dapat dihapus karena sudah memiliki aktivitas terkait.</p>
        <button id="closeCannotDeleteModalBtn" class="w-full bg-orange-500 hover:bg-orange-600 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
          Mengerti
        </button>
      </div>
    </div>
  </div>

  <div id="confirmDeleteModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="confirmDeleteModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Anda Yakin?</h3>
        <p id="confirmDeleteMessage" class="text-gray-600 mb-6">Apakah Anda yakin ingin menghapus user ini? Tindakan ini tidak dapat dibatalkan.</p>
        <div class="flex justify-center gap-4">
          <button id="cancelDeleteBtn" class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-3 px-6 rounded-xl transition-colors duration-200">
            Batal
          </button>
          <button id="confirmDeleteBtn" class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
            Ya, Hapus
          </button>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // =====================================================
      // ⚙️ Fungsi Helper untuk Modal
      // =====================================================
      function showModal(modalId) {
        const modal = document.getElementById(modalId);
        const content = document.getElementById(modalId + 'Content');
        modal.classList.remove('hidden');
        setTimeout(() => {
          content.classList.remove('scale-95', 'opacity-0');
          content.classList.add('scale-100', 'opacity-100');
        }, 10);
      }
    
      function hideModal(modalId) {
        const modal = document.getElementById(modalId);
        const content = document.getElementById(modalId + 'Content');
        content.classList.remove('scale-100', 'opacity-100');
        content.classList.add('scale-95', 'opacity-0');
        setTimeout(() => modal.classList.add('hidden'), 300);
      }

      document.getElementById('closeCannotDeleteModalBtn').addEventListener('click', () => hideModal('cannotDeleteModal'));
      document.getElementById('cancelDeleteBtn').addEventListener('click', () => hideModal('confirmDeleteModal'));

      ['cannotDeleteModal', 'confirmDeleteModal'].forEach(id => {
        document.getElementById(id).addEventListener('click', (e) => {
          if (e.target.id === id) hideModal(id);
        });
      });

      // =====================================================
      // 🔍 Filter & Pagination
      // =====================================================
      const searchInput = document.getElementById("searchInput");
      const tbody = document.getElementById("userTable");
      let rows = Array.from(tbody.querySelectorAll("tr[data-role]"));

      const rowsPerPage = 10;
      let currentPage = 1;
      let selectedRole = "all";
      let selectedDivisi = "all";

      function filterRows() {
        const q = searchInput.value.toLowerCase();
        rows.forEach(r => {
          const text = r.textContent.toLowerCase();
          r.dataset.visible = text.includes(q) ? "true" : "false";
        });
        applyFilters();
      }

      function applyFilters() {
        rows.forEach(r => {
          const role = r.dataset.role;
          const divisi = r.dataset.divisi || "";
          let visible = r.dataset.visible !== "false";
          if (selectedRole !== "all" && role !== selectedRole) visible = false;
          if (selectedRole === "HMSI" && selectedDivisi !== "all" && divisi !== selectedDivisi) visible = false;
          r.dataset.show = visible ? "true" : "false";
        });
        paginate();
      }

      function paginate() {
        const visibleRows = rows.filter(r => r.dataset.show === "true");
        const totalPages = Math.ceil(visibleRows.length / rowsPerPage);
        if (currentPage > totalPages) currentPage = totalPages || 1;
        rows.forEach(r => (r.style.display = "none"));
        visibleRows.forEach((r, i) => {
          if (i >= (currentPage - 1) * rowsPerPage && i < currentPage * rowsPerPage) r.style.display = "";
        });
        document.getElementById("pageInfo").textContent = `Halaman ${currentPage} dari ${totalPages || 1}`;
        document.getElementById("prevPage").disabled = currentPage === 1;
        document.getElementById("nextPage").disabled = currentPage === totalPages || totalPages === 0;
      }

      searchInput?.addEventListener("input", filterRows);
      
      const roleBtn = document.getElementById("roleDropdownBtn");
      const roleMenu = document.getElementById("roleDropdownMenu");
      const roleLabel = document.getElementById("roleDropdownLabel");
      const divisiWrapper = document.getElementById("divisiFilterWrapper");

      roleBtn.addEventListener("click", () => roleMenu.classList.toggle("hidden"));
      roleMenu.querySelectorAll("button").forEach(btn => {
        btn.addEventListener("click", () => {
          selectedRole = btn.dataset.role;
          roleLabel.textContent = btn.textContent;
          roleMenu.classList.add("hidden");
          divisiWrapper.classList.toggle("hidden", selectedRole !== "HMSI");
          applyFilters();
        });
      });
      window.addEventListener("click", e => {
        if (!roleBtn.contains(e.target) && !roleMenu.contains(e.target)) roleMenu.classList.add("hidden");
      });
      
      const divisiBtn = document.getElementById("divisiDropdownBtn");
      const divisiMenu = document.getElementById("divisiDropdownMenu");
      const divisiLabel = document.getElementById("divisiDropdownLabel");

      divisiBtn?.addEventListener("click", () => divisiMenu.classList.toggle("hidden"));
      divisiMenu?.querySelectorAll("button").forEach(btn => {
        btn.addEventListener("click", () => {
          selectedDivisi = btn.dataset.divisi;
          divisiLabel.textContent = btn.textContent;
          divisiMenu.classList.add("hidden");
          applyFilters();
        });
      });
      window.addEventListener("click", e => {
        if (!divisiBtn?.contains(e.target) && !divisiMenu?.contains(e.target)) divisiMenu?.classList.add("hidden");
      });

      // =====================================================
      // 🗑️ Logika Hapus User dengan Modal Baru
      // =====================================================
      const deleteButtons = document.querySelectorAll('.delete-btn');
      const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
      
      deleteButtons.forEach(button => {
        button.addEventListener('click', async (event) => {
          event.preventDefault();
          
          const userId = button.dataset.id;
          const userName = button.dataset.nama;
          const form = button.closest('form');
          
          try {
            const response = await fetch(`/admin/user/check-activity/${userId}`);
            const data = await response.json();
            
            if (data.canDelete) {
              const confirmMsg = document.getElementById('confirmDeleteMessage');
              confirmMsg.textContent = `Apakah Anda yakin ingin menghapus user "${userName}"? Tindakan ini tidak dapat dibatalkan.`;
              showModal('confirmDeleteModal');
              
              confirmDeleteBtn.addEventListener('click', function handleDelete() {
                form.submit();
              }, { once: true });

            } else {
              const cannotDeleteMsg = document.getElementById('cannotDeleteMessage');
              cannotDeleteMsg.textContent = data.message;
              showModal('cannotDeleteModal');
            }
          } catch (error) {
            console.error('Error saat memeriksa aktivitas user:', error);
            const cannotDeleteMsg = document.getElementById('cannotDeleteMessage');
            cannotDeleteMsg.textContent = 'Gagal terhubung ke server untuk memeriksa aktivitas user. Silakan coba lagi.';
            showModal('cannotDeleteModal');
          }
        });
      });

      // Init
      filterRows();
      document.getElementById("prevPage")?.addEventListener("click", () => { currentPage--; paginate(); });
      document.getElementById("nextPage")?.addEventListener("click", () => { currentPage++; paginate(); });
    });
  </script>
</body>
</html>