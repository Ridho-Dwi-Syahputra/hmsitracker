<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarAdmin', { user: user }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarAdmin', { activeNav: 'divisi', user: user }) %>

  <!-- Main Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header -->
      <div class="bg-orange-500 text-white px-6 py-6 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold">Kelola Divisi</h1>
          <p class="text-sm text-orange-100">Daftar seluruh divisi HMSI</p>
        </div>
        <button id="btnTambahDivisi"
          class="flex items-center space-x-2 px-4 py-2 bg-white text-orange-600 rounded-lg font-semibold
                 transition-all duration-200 hover:bg-orange-100 hover:scale-105 active:scale-95">
          <i class="fa-solid fa-plus"></i>
          <span>Tambah Divisi</span>
        </button>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8">

        <!-- Search -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
          <div class="flex-1">
            <div class="relative">
              <input id="searchInput" type="text" placeholder="Cari divisi..."
                class="w-full pl-10 pr-4 py-3 border rounded-xl text-sm
                       border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-500
                       focus:bg-orange-50 focus:text-orange-700 
                       placeholder-gray-400 focus:placeholder-orange-400
                       transition-all duration-300">
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto bg-white-50 p-2 shadow-sm rounded-xl">
          <table class="min-w-full text-sm text-center border border-orange-200 rounded-xl overflow-hidden border-separate border-spacing-0">
            <thead class="bg-orange-100 text-gray-700">
              <tr>
                <th class="py-3 px-4 font-semibold border border-orange-200">No</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Nama Divisi</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Deskripsi</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Aksi</th>
              </tr>
            </thead>
            <tbody id="divisiTable">
              <% if (!divisiList || divisiList.length === 0) { %>
                <tr>
                  <td colspan="4" class="py-8 text-gray-500 text-center border border-orange-100">
                    Belum ada divisi terdaftar
                  </td>
                </tr>
              <% } else { %>
                <% divisiList.forEach((d, i) => { %>
                  <tr class="hover:bg-orange-50 transition">
                    <td class="py-3 px-4 border border-orange-100"><%= i + 1 %></td>
                    <td class="py-3 px-4 text-left font-medium text-gray-800 border border-orange-100"><%= d.nama_divisi %></td>
                    <td class="py-3 px-4 text-left text-gray-600 border border-orange-100"><%= d.deskripsi || '-' %></td>
                    <td class="py-3 px-4 flex justify-center gap-4 border border-orange-100">
                      <button 
                        class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110 btnEditDivisi"
                        data-id="<%= d.id_divisi %>"
                        data-nama="<%= d.nama_divisi %>"
                        data-deskripsi="<%= d.deskripsi || '' %>"
                        title="Edit">
                        <i class="fa-solid fa-pen-to-square text-lg"></i>
                      </button>
                      <button type="button"
                        class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110 btnDeleteDivisi"
                        data-id="<%= d.id_divisi %>"
                        data-nama="<%= d.nama_divisi %>"
                        title="Hapus">
                        <i class="fa-solid fa-trash text-lg"></i>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Modal Tambah/Edit Divisi -->
  <div id="divisiModal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl w-96 p-6 relative animate-fadeIn">
      <h2 id="modalTitle" class="text-xl font-bold text-gray-800 mb-4">Tambah Divisi</h2>
      <form id="divisiForm" method="POST" action="/admin/divisi/tambah">
        <input type="hidden" name="id_divisi" id="idDivisiInput">
        <div class="mb-4">
          <label for="nama_divisi" class="block text-sm font-medium text-gray-700 mb-2">Nama Divisi</label>
          <input type="text" id="nama_divisi" name="nama_divisi" required
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div class="mb-4">
          <label for="deskripsi" class="block text-sm font-medium text-gray-700 mb-2">Deskripsi</label>
          <textarea id="deskripsi" name="deskripsi" rows="3"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"></textarea>
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" id="btnCancel"
            class="px-4 py-2 rounded-lg border border-gray-300 text-gray-600 hover:bg-gray-100 transition">Batal</button>
          <button type="submit"
            class="px-4 py-2 rounded-lg bg-orange-500 text-white font-semibold hover:bg-orange-600 transition">Simpan</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Success Modal (untuk Tambah/Edit) -->
  <div id="successModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="successModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Berhasil Disimpan!</h3>
        <p id="successMessage" class="text-gray-600 mb-6">Data divisi berhasil disimpan.</p>
        <button id="closeSuccessModal" class="w-full bg-orange-500 hover:bg-orange-600 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
          OK
        </button>
      </div>
    </div>
  </div>

  <!-- Confirm Delete Modal -->
  <div id="confirmDeleteModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="confirmDeleteModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Anda Yakin?</h3>
        <p id="confirmDeleteMessage" class="text-gray-600 mb-6">Apakah Anda yakin ingin menghapus divisi ini? Tindakan ini tidak dapat dibatalkan.</p>
        <div class="flex justify-center gap-4">
          <button id="cancelDeleteBtn" class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-3 px-6 rounded-xl transition-colors duration-200">
            Batal
          </button>
          <button id="confirmDeleteBtn" class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
            Ya, Hapus
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Cannot Delete Modal -->
  <div id="cannotDeleteModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-md w-full mx-4 transform transition-all duration-300 scale-95 opacity-0" id="cannotDeleteModalContent">
      <div class="text-center">
        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">Aksi Dibatalkan</h3>
        <p id="cannotDeleteMessage" class="text-gray-600 mb-6">Divisi ini tidak dapat dihapus karena masih memiliki anggota terkait.</p>
        <button id="closeCannotDeleteModalBtn" class="w-full bg-orange-500 hover:bg-orange-600 text-white font-medium py-3 px-6 rounded-xl transition-colors duration-200">
          Mengerti
        </button>
      </div>
    </div>
  </div>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // =====================================================
      // âš™ï¸ Fungsi Helper untuk Modal
      // =====================================================
      function showModal(modalId) {
        const modal = document.getElementById(modalId);
        const content = document.getElementById(modalId + 'Content');
        modal.classList.remove('hidden');
        setTimeout(() => {
          content.classList.remove('scale-95', 'opacity-0');
          content.classList.add('scale-100', 'opacity-100');
        }, 10);
      }
    
      function hideModal(modalId) {
        const modal = document.getElementById(modalId);
        const content = document.getElementById(modalId + 'Content');
        content.classList.remove('scale-100', 'opacity-100');
        content.classList.add('scale-95', 'opacity-0');
        setTimeout(() => modal.classList.add('hidden'), 300);
      }

      // =====================================================
      // ðŸ“ Modal Tambah/Edit Divisi
      // =====================================================
      const modal = document.getElementById("divisiModal");
      const form = document.getElementById("divisiForm");
      const modalTitle = document.getElementById("modalTitle");
      const inputId = document.getElementById("idDivisiInput");
      const inputNama = document.getElementById("nama_divisi");
      const inputDesk = document.getElementById("deskripsi");

      // Tambah Divisi
      document.getElementById("btnTambahDivisi")?.addEventListener("click", () => {
        modal.classList.remove("hidden");
        modalTitle.textContent = "Tambah Divisi";
        form.action = "/admin/divisi/tambah";
        inputId.value = "";
        inputNama.value = "";
        inputDesk.value = "";
      });

      // Edit Divisi
      document.querySelectorAll(".btnEditDivisi").forEach(btn => {
        btn.addEventListener("click", () => {
          modal.classList.remove("hidden");
          modalTitle.textContent = "Edit Divisi";
          form.action = "/admin/divisi/update";
          inputId.value = btn.dataset.id;
          inputNama.value = btn.dataset.nama;
          inputDesk.value = btn.dataset.deskripsi;
        });
      });

      // Close Modal Tambah/Edit
      document.getElementById("btnCancel").addEventListener("click", () => modal.classList.add("hidden"));
      modal.addEventListener("click", (e) => {
        if (e.target === modal) modal.classList.add("hidden");
      });

      // =====================================================
      // ðŸ’¾ Form Submit Handler dengan Success Modal
      // =====================================================
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const isEdit = form.action.includes('/update');
        
        try {
          const response = await fetch(form.action, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams(formData)
          });

          if (response.ok) {
            modal.classList.add("hidden");
            const successMsg = document.getElementById('successMessage');
            successMsg.textContent = isEdit 
              ? 'Data divisi berhasil diperbarui.' 
              : 'Divisi baru berhasil ditambahkan.';
            showModal('successModal');
          } else {
            alert('Terjadi kesalahan saat menyimpan data.');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Gagal terhubung ke server.');
        }
      });

      // Close Success Modal
      document.getElementById('closeSuccessModal').addEventListener('click', () => {
        hideModal('successModal');
        setTimeout(() => {
          window.location.reload();
        }, 300);
      });

      document.getElementById('successModal').addEventListener('click', (e) => {
        if (e.target.id === 'successModal') {
          hideModal('successModal');
          setTimeout(() => {
            window.location.reload();
          }, 300);
        }
      });

      // =====================================================
      // ðŸ—‘ï¸ Logika Hapus Divisi dengan Modal
      // =====================================================
      const deleteButtons = document.querySelectorAll('.btnDeleteDivisi');
      const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
      
      deleteButtons.forEach(button => {
        button.addEventListener('click', async (event) => {
          event.preventDefault();
          
          const divisiId = button.dataset.id;
          const divisiNama = button.dataset.nama;
          
          // Cek apakah divisi bisa dihapus (opsional, jika ada endpoint check)
          // Jika tidak ada endpoint check, langsung tampilkan confirm modal
          const confirmMsg = document.getElementById('confirmDeleteMessage');
          confirmMsg.textContent = `Apakah Anda yakin ingin menghapus divisi "${divisiNama}"? Tindakan ini tidak dapat dibatalkan.`;
          showModal('confirmDeleteModal');
          
          // Handler untuk tombol konfirmasi delete
          const handleDelete = async () => {
            try {
              const response = await fetch(`/admin/divisi/delete/${divisiId}`, {
                method: 'GET'
              });

              if (response.ok) {
                hideModal('confirmDeleteModal');
                const successMsg = document.getElementById('successMessage');
                successMsg.textContent = 'Divisi berhasil dihapus.';
                showModal('successModal');
              } else {
                const data = await response.json();
                hideModal('confirmDeleteModal');
                const cannotDeleteMsg = document.getElementById('cannotDeleteMessage');
                cannotDeleteMsg.textContent = data.message || 'Divisi tidak dapat dihapus karena masih memiliki anggota terkait.';
                showModal('cannotDeleteModal');
              }
            } catch (error) {
              console.error('Error:', error);
              hideModal('confirmDeleteModal');
              const cannotDeleteMsg = document.getElementById('cannotDeleteMessage');
              cannotDeleteMsg.textContent = 'Gagal terhubung ke server. Silakan coba lagi.';
              showModal('cannotDeleteModal');
            }
          };

          // Remove event listener lama dan tambahkan yang baru
          confirmDeleteBtn.removeEventListener('click', handleDelete);
          confirmDeleteBtn.addEventListener('click', handleDelete, { once: true });
        });
      });

      // Close Delete Modals
      document.getElementById('closeCannotDeleteModalBtn').addEventListener('click', () => hideModal('cannotDeleteModal'));
      document.getElementById('cancelDeleteBtn').addEventListener('click', () => hideModal('confirmDeleteModal'));

      ['cannotDeleteModal', 'confirmDeleteModal'].forEach(id => {
        document.getElementById(id).addEventListener('click', (e) => {
          if (e.target.id === id) hideModal(id);
        });
      });

      // =====================================================
      // ðŸ” Search Filter
      // =====================================================
      const searchInput = document.getElementById("searchInput");
      const tbody = document.getElementById("divisiTable");
      const rows = Array.from(tbody.querySelectorAll("tr"));

      searchInput.addEventListener("input", () => {
        const query = searchInput.value.toLowerCase();
        rows.forEach(row => {
          const text = row.textContent.toLowerCase();
          row.style.display = text.includes(query) ? "" : "none";
        });
      });
    });
  </script>

  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }
    .animate-fadeIn { animation: fadeIn 0.25s ease-out; }
  </style>
</body>
</html>