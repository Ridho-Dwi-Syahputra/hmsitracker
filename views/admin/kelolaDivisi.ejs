<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarAdmin', { user: user }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarAdmin', { activeNav: 'divisi', user: user }) %>

  <!-- Main Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header -->
      <div class="bg-orange-500 text-white px-6 py-6 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold">Kelola Divisi</h1>
          <p class="text-sm text-orange-100">Daftar seluruh divisi HMSI</p>
        </div>
        <button id="btnTambahDivisi"
          class="flex items-center space-x-2 px-4 py-2 bg-white text-orange-600 rounded-lg font-semibold
                 transition-all duration-200 hover:bg-orange-100 hover:scale-105 active:scale-95">
          <i class="fa-solid fa-plus"></i>
          <span>Tambah Divisi</span>
        </button>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8">


        <!-- Search -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
          <div class="flex-1">
            <div class="relative">
              <input id="searchInput" type="text" placeholder="Cari divisi..."
                class="w-full pl-10 pr-4 py-3 border rounded-xl text-sm
                       border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-500
                       focus:bg-orange-50 focus:text-orange-700 
                       placeholder-gray-400 focus:placeholder-orange-400
                       transition-all duration-300">
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>
        </div>

        <!-- Table -->
        <div class="overflow-x-auto bg-white-50 p-2 shadow-sm rounded-xl">
          <table class="min-w-full text-sm text-center border border-orange-200 rounded-xl overflow-hidden border-separate border-spacing-0">
            <thead class="bg-orange-100 text-gray-700">
              <tr>
                <th class="py-3 px-4 font-semibold border border-orange-200">No</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Nama Divisi</th>
                <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Deskripsi</th>
                <th class="py-3 px-4 font-semibold border border-orange-200">Aksi</th>
              </tr>
            </thead>
            <tbody id="divisiTable">
              <% if (!divisiList || divisiList.length === 0) { %>
                <tr>
                  <td colspan="4" class="py-8 text-gray-500 text-center border border-orange-100">
                    Belum ada divisi terdaftar
                  </td>
                </tr>
              <% } else { %>
                <% divisiList.forEach((d, i) => { %>
                  <tr class="hover:bg-orange-50 transition">
                    <td class="py-3 px-4 border border-orange-100"><%= i + 1 %></td>
                    <td class="py-3 px-4 text-left font-medium text-gray-800 border border-orange-100"><%= d.nama_divisi %></td>
                    <td class="py-3 px-4 text-left text-gray-600 border border-orange-100"><%= d.deskripsi || '-' %></td>
                    <td class="py-3 px-4 flex justify-center gap-4 border border-orange-100">
                      <button 
                        class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110 btnEditDivisi"
                        data-id="<%= d.id_divisi %>"
                        data-nama="<%= d.nama_divisi %>"
                        data-deskripsi="<%= d.deskripsi || '' %>"
                        title="Edit">
                        <i class="fa-solid fa-pen-to-square text-lg"></i>
                      </button>
                      <form action="/admin/divisi/delete/<%= d.id_divisi %>" method="GET"
                        onsubmit="return confirm('Yakin ingin menghapus divisi ini?')">
                        <button type="submit" class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110" title="Hapus">
                          <i class="fa-solid fa-trash text-lg"></i>
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Modal Tambah/Edit Divisi -->
  <div id="divisiModal" class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-xl w-96 p-6 relative animate-fadeIn">
      <h2 id="modalTitle" class="text-xl font-bold text-gray-800 mb-4">Tambah Divisi</h2>
      <form id="divisiForm" method="POST" action="/admin/divisi/tambah">
        <input type="hidden" name="id_divisi" id="idDivisiInput">
        <div class="mb-4">
          <label for="nama_divisi" class="block text-sm font-medium text-gray-700 mb-2">Nama Divisi</label>
          <input type="text" id="nama_divisi" name="nama_divisi" required
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div class="mb-4">
          <label for="deskripsi" class="block text-sm font-medium text-gray-700 mb-2">Deskripsi</label>
          <textarea id="deskripsi" name="deskripsi" rows="3"
                    class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500"></textarea>
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" id="btnCancel"
            class="px-4 py-2 rounded-lg border border-gray-300 text-gray-600 hover:bg-gray-100 transition">Batal</button>
          <button type="submit"
            class="px-4 py-2 rounded-lg bg-orange-500 text-white font-semibold hover:bg-orange-600 transition">Simpan</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const modal = document.getElementById("divisiModal");
      const form = document.getElementById("divisiForm");
      const modalTitle = document.getElementById("modalTitle");
      const inputId = document.getElementById("idDivisiInput");
      const inputNama = document.getElementById("nama_divisi");
      const inputDesk = document.getElementById("deskripsi");

      // Tambah Divisi
      document.getElementById("btnTambahDivisi")?.addEventListener("click", () => {
        modal.classList.remove("hidden");
        modalTitle.textContent = "Tambah Divisi";
        form.action = "/admin/divisi/tambah";
        inputId.value = "";
        inputNama.value = "";
        inputDesk.value = "";
      });

      // Edit Divisi
      document.querySelectorAll(".btnEditDivisi").forEach(btn => {
        btn.addEventListener("click", () => {
          modal.classList.remove("hidden");
          modalTitle.textContent = "Edit Divisi";
          form.action = "/admin/divisi/update";
          inputId.value = btn.dataset.id;
          inputNama.value = btn.dataset.nama;
          inputDesk.value = btn.dataset.deskripsi;
        });
      });

      // Close Modal
      document.getElementById("btnCancel").addEventListener("click", () => modal.classList.add("hidden"));
      modal.addEventListener("click", (e) => {
        if (e.target === modal) modal.classList.add("hidden");
      });

      // Search Filter
      const searchInput = document.getElementById("searchInput");
      const tbody = document.getElementById("divisiTable");
      const rows = Array.from(tbody.querySelectorAll("tr"));

      searchInput.addEventListener("input", () => {
        const query = searchInput.value.toLowerCase();
        rows.forEach(row => {
          const text = row.textContent.toLowerCase();
          row.style.display = text.includes(query) ? "" : "none";
        });
      });
    });
  </script>

  <style>
    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.95); }
      to { opacity: 1; transform: scale(1); }
    }
    .animate-fadeIn { animation: fadeIn 0.25s ease-out; }
  </style>
</body>
</html>
