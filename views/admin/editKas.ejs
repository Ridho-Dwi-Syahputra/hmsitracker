<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- ✅ Navbar Admin -->
  <%- include('../partials/navbarAdmin', { user: user }) %>

  <!-- ✅ Sidebar Admin -->
  <%- include('../partials/sidebarAdmin', { user: user, activeNav: activeNav }) %>

  <!-- Main Content -->
  <main class="lg:ml-80 min-h-screen px-6 pt-20 pb-8">
    <div class="max-w-3xl mx-auto bg-white shadow-xl rounded-2xl p-8 border border-orange-200">

      <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Pemasukan Kas</h1>

      <form action="/admin/keuangan/edit/<%= pemasukan.id_keuangan %>" method="POST" class="space-y-5">

        <!-- Sumber -->
        <div>
          <label for="sumber" class="block text-sm font-medium text-gray-700 mb-1">Sumber Dana</label>
          <input type="text" id="sumber" name="sumber"
                 value="<%= pemasukan.sumber %>"
                 class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-orange-500 focus:outline-none"
                 required>
        </div>

        <!-- Jumlah -->
        <div>
          <label for="jumlah" class="block text-sm font-medium text-gray-700 mb-1">Jumlah (Rp)</label>
          <input type="number" id="jumlah" name="jumlah" min="0"
                 value="<%= pemasukan.jumlah %>"
                 class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-orange-500 focus:outline-none"
                 required>
        </div>

        <!-- Tombol -->
        <div class="flex justify-between items-center pt-6">
          <a href="/admin/keuangan"
             class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition">
            <i class="fa-solid fa-arrow-left mr-2"></i> Kembali
          </a>

          <button type="submit"
                  class="inline-flex items-center px-6 py-2 bg-orange-500 text-white rounded-lg hover:bg-orange-600 transition">
            <i class="fa-solid fa-save mr-2"></i> Simpan Perubahan
          </button>
        </div>
      </form>
    </div>
  </main>

  <!-- ✅ Footer -->
  <%- include('../partials/footer') %>
</body>
</html>
