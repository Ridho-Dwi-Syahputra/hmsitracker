<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/your-fa-kit.js" crossorigin="anonymous"></script>
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarAdmin', { user: user }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarAdmin', { activeNav: 'users', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Tambah User</h1>
        <p class="text-sm text-orange-100">Lengkapi data user baru di bawah</p>
      </div>

      <!-- Body Card -->
      <div class="p-6 sm:p-8">
        <!-- Alert -->
        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <!-- Form -->
        <form action="/admin/user/tambah" method="POST" class="space-y-10">

          <!-- Informasi Dasar -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Dasar</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- NIM -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">
                  NIM <span class="text-red-500">*</span>
                </label>
                <input type="text" name="id_anggota" value="<%= old?.id_anggota || '' %>" required
                  placeholder="Masukkan NIM"
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm 
                         focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Nama -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Nama Lengkap <span class="text-red-500">*</span></label>
                <input type="text" name="nama" value="<%= old?.nama || '' %>" required
                  placeholder="Masukkan nama lengkap"
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm 
                         focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Email -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Email <span class="text-red-500">*</span></label>
                <input type="email" name="email" value="<%= old?.email || '' %>" required
                  placeholder="Masukkan email user"
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm 
                         focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Password -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Password <span class="text-red-500">*</span></label>
                <input type="password" name="password" required
                  placeholder="Masukkan password"
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm 
                         focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

            </div>
          </div>

          <!-- Informasi Organisasi -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Organisasi</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Role Dropdown -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4 relative">
                <label class="block text-sm font-medium text-orange-700 mb-2">Role <span class="text-red-500">*</span></label>
                <button type="button" id="roleDropdownBtn"
                  class="flex items-center justify-between w-full px-4 py-3 border border-orange-200 rounded-lg text-sm bg-white
                         hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
                  <span id="roleDropdownLabel"><%= old?.role || 'Pilih Role' %></span>
                  <i class="fa-solid fa-chevron-down text-orange-500"></i>
                </button>
                <div id="roleDropdownMenu"
                  class="hidden absolute left-0 mt-2 w-full bg-white border border-orange-200 rounded-lg shadow-lg z-10">
                  <ul class="text-sm text-gray-700">
                    <li><button type="button" class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="HMSI">HMSI</button></li>
                    <li><button type="button" class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="DPA">DPA</button></li>
                    <li><button type="button" class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="Admin">Admin</button></li>
                  </ul>
                </div>
                <input type="hidden" name="role" id="roleInput" value="<%= old?.role || '' %>">
              </div>

              <!-- Divisi Dropdown (khusus HMSI) -->
              <div id="divisiWrapper" class="bg-orange-50 border border-orange-200 rounded-xl p-4 relative <%= old?.role === 'HMSI' ? '' : 'hidden' %>">
                <label class="block text-sm font-medium text-orange-700 mb-2">Divisi</label>
                <button type="button" id="divisiDropdownBtn"
                  class="flex items-center justify-between w-full px-4 py-3 border border-orange-200 rounded-lg text-sm bg-white
                         hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
                  <span id="divisiDropdownLabel">
                    <% if (old?.id_divisi) { %>
                      <%= (divisiList.find(d => d.id_divisi == old.id_divisi)?.nama_divisi) || 'Pilih Divisi' %>
                    <% } else { %>
                      Pilih Divisi
                    <% } %>
                  </span>
                  <i class="fa-solid fa-chevron-down text-orange-500"></i>
                </button>
                <div id="divisiDropdownMenu"
                  class="hidden absolute left-0 mt-2 w-full bg-white border border-orange-200 rounded-lg shadow-lg z-10">
                  <ul class="text-sm text-gray-700 max-h-48 overflow-y-auto">
                    <% divisiList.forEach(d => { %>
                      <li>
                        <button type="button" class="w-full text-left px-4 py-2 hover:bg-orange-100" data-id="<%= d.id_divisi %>">
                          <%= d.nama_divisi %>
                        </button>
                      </li>
                    <% }) %>
                  </ul>
                </div>
                <input type="hidden" name="id_divisi" id="divisiInput" value="<%= old?.id_divisi || '' %>">
              </div>
            </div>
          </div>

          <!-- Keterangan Wajib -->
          <p class="text-sm text-red-500 mt-4">
            * Field dengan tanda (<span class="text-red-500">*</span>) wajib diisi
          </p>

          <!-- Tombol -->
          <div class="pt-6 border-t border-gray-100 flex gap-4 justify-end">
            <a href="/admin/kelola-user"
              class="px-8 py-3 border border-gray-300 rounded-xl text-sm font-medium bg-white text-gray-700 transition-all duration-200 hover:shadow-md">
              Batal
            </a>
            <button type="submit"
              class="flex items-center justify-center gap-2 px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold transition-all duration-200 hover:bg-orange-600">
              <i class="fa-solid fa-save"></i>
              <span>Simpan</span>
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Script -->
  <script>
    // ====== ROLE DROPDOWN ======
    const roleBtn = document.getElementById("roleDropdownBtn");
    const roleMenu = document.getElementById("roleDropdownMenu");
    const roleInput = document.getElementById("roleInput");
    const roleLabel = document.getElementById("roleDropdownLabel");
    const divisiWrapper = document.getElementById("divisiWrapper");

    roleBtn.addEventListener("click", () => roleMenu.classList.toggle("hidden"));
    roleMenu.querySelectorAll("button").forEach(btn => {
      btn.addEventListener("click", () => {
        roleInput.value = btn.dataset.value;
        roleLabel.textContent = btn.textContent;
        roleMenu.classList.add("hidden");

        if (btn.dataset.value === "HMSI") {
          divisiWrapper.classList.remove("hidden");
        } else {
          divisiWrapper.classList.add("hidden");
          document.getElementById("divisiInput").value = "";
          document.getElementById("divisiDropdownLabel").textContent = "Pilih Divisi";
        }
      });
    });
    window.addEventListener("click", (e) => {
      if (!roleBtn.contains(e.target) && !roleMenu.contains(e.target)) roleMenu.classList.add("hidden");
    });

    // ====== DIVISI DROPDOWN ======
    const divisiBtn = document.getElementById("divisiDropdownBtn");
    const divisiMenu = document.getElementById("divisiDropdownMenu");
    const divisiInput = document.getElementById("divisiInput");
    const divisiLabel = document.getElementById("divisiDropdownLabel");

    divisiBtn?.addEventListener("click", () => divisiMenu.classList.toggle("hidden"));
    divisiMenu?.querySelectorAll("button").forEach(btn => {
      btn.addEventListener("click", () => {
        divisiInput.value = btn.dataset.id;
        divisiLabel.textContent = btn.textContent;
        divisiMenu.classList.add("hidden");
      });
    });
    window.addEventListener("click", (e) => {
      if (!divisiBtn?.contains(e.target) && !divisiMenu?.contains(e.target)) divisiMenu?.classList.add("hidden");
    });
  </script>
</body>
</html>
