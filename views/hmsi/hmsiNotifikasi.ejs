<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { user: user, activeNav: 'notifikasi' }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-4xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Notifikasi</h1>
        <p class="text-sm text-orange-100">
          Update terbaru dari DPA untuk 
          <span class="font-semibold"><%= user.nama_divisi || user.divisi || 'Divisi Anda' %></span>
        </p>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8 space-y-4">
        <% if (notifikasi && notifikasi.length > 0) { %>
          <% notifikasi.forEach(function(n) { %>
            <% let targetUrl = n.linkUrl; %>

            <!-- Kartu Notifikasi -->
            <a href="/hmsi/notifikasi/read/<%= n.id_notifikasi %>"
               class="block" aria-label="Buka notifikasi">
              <div class="flex items-start gap-4 p-4 bg-white border rounded-xl shadow-sm hover:shadow-md transition cursor-pointer
                          <%= !n.status_baca ? 'border-2 border-orange-300 bg-orange-50/50' : 'border-orange-100' %>">
                
                <!-- Icon -->
                <div class="flex-shrink-0 mt-1">
                  <% if (n.id_evaluasi) { %>
                    <i class="fa-solid fa-clipboard-check text-orange-500 text-lg"></i>
                  <% } else { %>
                    <i class="fa-solid fa-bell text-orange-500 text-lg"></i>
                  <% } %>
                </div>

                <!-- Isi -->
                <div class="flex-1">
                  <p class="text-gray-800 text-sm font-medium">
                    <%= n.pesan || (n.id_evaluasi ? 'Ada evaluasi dari DPA pada laporan Anda' : 'Status program kerja telah diperbarui oleh DPA') %>
                  </p>

                  <!-- Info tambahan -->
                  <% if (n.id_evaluasi) { %>
                    <p class="text-gray-600 text-xs mt-1 leading-relaxed">
                      <span class="font-semibold">Judul Laporan:</span> <%= n.judul_laporan || '-' %><br>
                      <span class="font-semibold">Evaluator:</span> <%= n.evaluator || 'DPA' %>
                    </p>
                  <% } else if (n.id_ProgramKerja) { %>
                    <p class="text-gray-600 text-xs mt-1 leading-relaxed">
                      <span class="font-semibold">Program Kerja:</span> <%= n.Nama_ProgramKerja || '-' %>
                    </p>
                  <% } %>

                  <!-- Footer -->
                  <div class="flex items-center justify-between mt-3">
                    <span class="text-xs text-gray-500"><%= n.tanggalFormatted || '-' %></span>
                    <span class="text-orange-600 text-xs font-semibold hover:underline"><%= n.linkLabel %></span>
                  </div>
                </div>

                <!-- Status -->
                <% if (!n.status_baca) { %>
                  <span class="text-[10px] px-2 py-1 bg-orange-100 text-orange-700 rounded-full self-start">Baru</span>
                <% } %>
              </div>
            </a>
          <% }) %>
        <% } else { %>
          <!-- Empty State -->
          <div class="flex flex-col items-center space-y-4 py-20">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
              <i class="fa-solid fa-bell-slash text-2xl text-gray-400"></i>
            </div>
            <div class="text-center">
              <div class="text-xl font-semibold text-gray-800 mb-2">Tidak ada notifikasi</div>
              <div class="text-gray-500">Belum ada notifikasi untuk <%= user.nama_divisi || 'divisi ini' %></div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('a.block').forEach(a => {
        a.setAttribute('tabindex', '0');
        a.addEventListener('keydown', e => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            window.location = a.href;
          }
        });
      });
    });
  </script>
</body>
</html>
