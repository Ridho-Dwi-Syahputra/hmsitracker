<% var old = typeof old !== 'undefined' ? old : {}; %>
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'Laporan', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Edit Laporan</h1>
        <p class="text-sm text-orange-100">Perbarui detail laporan kegiatan Anda</p>
      </div>

      <!-- Body Card -->
      <div class="p-6 sm:p-8">

        <!-- Alert -->
        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <!-- Form -->
        <form action="/hmsi/laporan/edit/<%= laporan.id_laporan %>" method="POST" enctype="multipart/form-data" class="space-y-8" data-mode="edit">

          <!-- Informasi Dasar -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Dasar</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Judul Laporan -->
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Judul Laporan</label>
                <input type="text" name="judul_laporan"
                  value="<%= old.judul_laporan || laporan.judul_laporan || '' %>" required
                  placeholder="Masukkan judul laporan..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
              </div>

              <!-- Program Kerja -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Program Kerja</label>
                <select name="id_ProgramKerja" required
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
                  <option value="">-- Pilih Program Kerja --</option>
                  <% (programs || []).forEach(p => { 
                       let selected = old.id_ProgramKerja 
                          ? (old.id_ProgramKerja == p.id) 
                          : (laporan.id_ProgramKerja == p.id); %>
                    <option value="<%= p.id %>" <%= selected ? "selected" : "" %>>
                      <%= p.namaProker %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <!-- Waktu & Tempat -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Waktu & Tempat</label>
                <input type="text" name="waktu_tempat"
                  value="<%= old.waktu_tempat || laporan.waktu_tempat || '' %>"
                  placeholder="Contoh: 09:00 - 12:00 WIB, Gedung A"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
              </div>

              <!-- Deskripsi -->
              <div class="md:col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-2">Deskripsi Kegiatan</label>
                <textarea name="deskripsi_kegiatan" rows="4" required
                  placeholder="Tuliskan deskripsi kegiatan..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500"><%= old.deskripsi_kegiatan || laporan.deskripsi_kegiatan || '' %></textarea>
              </div>
            </div>
          </div>

          <!-- Informasi Keuangan -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Keuangan</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Sumber Dana</label>
                <input type="text" name="sumber_dana"
                  value="<%= old.sumber_dana || laporan.sumber_dana || '' %>"
                  placeholder="Contoh: HMSI Fakultas Teknik"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Dana Terpakai (Rp)</label>
                <input type="number" name="dana_digunakan"
                  value="<%= old.dana_digunakan || laporan.dana_digunakan || '' %>"
                  placeholder="Contoh: 2500000"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
              </div>
            </div>
          </div>

          <!-- Target -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Target Pencapaian</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Target Kuantitatif (%)</label>
                <input type="number" name="persentase_kuantitatif"
                  value="<%= old.persentase_kuantitatif || laporan.persentase_kuantitatif || '' %>"
                  min="0" max="100"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Target Kualitatif (%)</label>
                <input type="number" name="persentase_kualitatif"
                  value="<%= old.persentase_kualitatif || laporan.persentase_kualitatif || '' %>"
                  min="0" max="100"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
              </div>
            </div>
          </div>

          <!-- Kendala & Solusi -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Kendala dan Solusi</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Kendala</label>
                <textarea name="kendala" rows="3"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500"><%= old.kendala || laporan.kendala || '' %></textarea>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Solusi</label>
                <textarea name="solusi" rows="3"
                  class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-500"><%= old.solusi || laporan.solusi || '' %></textarea>
              </div>
            </div>
          </div>

          <!-- Sasaran -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Sasaran Kegiatan</h4>
            <input type="text" name="sasaran"
              value="<%= old.sasaran || laporan.sasaran || '' %>"
              class="w-full px-4 py-3 border border-gray-300 rounded-xl text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-500">
          </div>

          <!-- Dokumentasi -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-2">File Dokumentasi</h4>
            <p class="text-sm text-gray-500 mb-4">Upload file pendukung laporan kegiatan</p>

            <div id="dropzone"
              class="border-2 border-dashed border-orange-300 rounded-xl p-8 bg-orange-50/30 text-center cursor-pointer 
                     transition duration-200 hover:border-orange-500 hover:bg-orange-100/50 flex flex-col items-center gap-4">

              <!-- Hidden file input -->
              <input type="file" name="dokumentasi" id="fileUpload" class="hidden" accept=".pdf,.jpg,.jpeg,.png"/>

              <div class="text-4xl text-gray-400">ðŸ“„</div>

              <label for="fileUpload" class="cursor-pointer">
                <span class="px-6 py-3 bg-orange-500 text-white rounded-lg text-sm font-medium transition hover:bg-orange-600 hover:shadow-md active:scale-95">
                  Pilih File atau Drag & Drop
                </span>
              </label>

              <p class="text-sm text-gray-600">
                Format didukung: <span class="font-medium">PDF, JPG, JPEG, PNG</span><br>
                Maksimal ukuran: <span class="font-medium">5MB</span>
              </p>
            </div>

            <p id="fileName" class="text-sm text-gray-600 mt-3"></p>

            <% if (laporan && laporan.dokumentasi) { %>
              <div class="mt-3 p-3 bg-gray-50 border rounded-lg text-sm">
                <p class="font-semibold mb-2">ðŸ“‚ File sebelumnya:</p>
                <% if (/\.(jpg|jpeg|png)$/i.test(laporan.dokumentasi)) { %>
                  <img src="/uploads/<%= laporan.dokumentasi %>" alt="Preview" class="max-h-40 rounded-lg shadow">
                <% } else if (/\.pdf$/i.test(laporan.dokumentasi)) { %>
                  <a href="/uploads/<%= laporan.dokumentasi %>" target="_blank" class="text-blue-600 underline">
                    <%= laporan.dokumentasi %>
                  </a>
                <% } %>
              </div>
            <% } %>
          </div>

          <!-- Tombol -->
          <div class="mt-8 pt-6 border-t border-gray-100 flex gap-4 justify-end">
            <a href="/hmsi/laporan" class="px-8 py-3 border border-gray-300 rounded-xl text-sm font-medium bg-white text-gray-700 transition hover:shadow-md">
              Batal
            </a>
            <button type="submit" id="submitBtn" class="flex items-center justify-center gap-2 px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold transition hover:bg-orange-600">
              <span id="btnText">Update</span>
              <div id="btnSpinner" class="hidden w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
            </button>
          </div>

        </form>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const input = document.getElementById("fileUpload");
      const fileName = document.getElementById("fileName");

      input.addEventListener("change", () => {
        if (input.files.length > 0) {
          fileName.textContent = "File dipilih: " + input.files[0].name;
        } else {
          fileName.textContent = "";
        }
      });
    });
  </script>

</body>
</html>
