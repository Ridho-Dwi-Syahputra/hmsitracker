<% var old = typeof old !== 'undefined' ? old : {}; %>
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <%- include('../partials/sidebarHMSI', { 
    activeNav: laporan.status_konfirmasi === 'Revisi' || laporan.status_konfirmasi === 'Disetujui' 
      ? 'kelolaEvaluasi' 
      : 'laporan',
    user: user 
  }) %>
  

  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-200">

      <!-- Header -->
      <div class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Edit Laporan</h1>
        <p class="text-sm text-orange-100">Perbarui detail laporan kegiatan Anda</p>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8">
        <div class="text-sm text-gray-500 mb-3">
          Divisi: <%= user.nama_divisi || 'Tidak diketahui' %>
        </div>

        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <!-- Form -->
        <form id="editLaporanForm"
              action="/hmsi/laporan/edit/<%= laporan.id_laporan %>"
              method="POST"
              enctype="multipart/form-data"
              class="space-y-10">

          <!-- ================= Informasi Dasar ================= -->
          <section>
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Informasi Dasar</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Judul Laporan -->
              <div class="md:col-span-2 bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Judul Laporan <span class="text-red-500">*</span>
                </label>
                <input type="text" name="judul_laporan" id="judul_laporan"
                       value="<%= old.judul_laporan || laporan.judul_laporan %>"
                       required
                       placeholder="Masukkan judul laporan..."
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100" />
                <div class="error-message text-red-500 text-xs mt-1 hidden"></div>
              </div>

              <!-- Program Kerja -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 relative hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Program Kerja <span class="text-red-500">*</span>
                </label>
                <button type="button" id="prokerDropdownBtn"
                        class="flex items-center justify-between w-full px-4 py-3 border border-gray-300 rounded-lg bg-white hover:border-gray-400">
                  <span id="prokerDropdownLabel" class="text-gray-700">
                    <%= old.id_ProgramKerja 
                      ? programs.find(p => p.id == old.id_ProgramKerja)?.namaProker
                      : programs.find(p => p.id == laporan.id_ProgramKerja)?.namaProker
                      || 'Pilih Program Kerja' %>
                  </span>
                  <i class="fa-solid fa-chevron-down text-gray-400"></i>
                </button>

                <div id="prokerDropdownMenu"
                     class="hidden absolute left-0 mt-2 w-full bg-white border rounded-lg shadow-lg z-10">
                  <ul class="max-h-48 overflow-y-auto text-sm text-gray-700">
                    <% programs
                        .sort((a, b) => a.namaProker.localeCompare(b.namaProker, 'id', { sensitivity: 'base' }))
                        .forEach(p => { %>
                      <li>
                        <button type="button"
                                class="w-full text-left px-4 py-2 hover:bg-gray-100"
                                data-value="<%= p.id %>"><%= p.namaProker %></button>
                      </li>
                    <% }) %>
                  </ul>
                </div>

                <input type="hidden" name="id_ProgramKerja" id="prokerInput"
                       value="<%= old.id_ProgramKerja || laporan.id_ProgramKerja %>" />
                <div class="error-message text-red-500 text-xs mt-1 hidden"></div>
              </div>

              <!-- Waktu & Tempat -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Waktu & Tempat <span class="text-red-500">*</span>
                </label>
                <input type="text" name="waktu_tempat" id="waktu_tempat"
                       value="<%= old.waktu_tempat || laporan.waktu_tempat %>"
                       required
                       placeholder="Contoh: 09:00 - 12:00 WIB, Gedung A"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100" />
                <div class="error-message text-red-500 text-xs mt-1 hidden"></div>
              </div>

              <!-- Deskripsi Kegiatan -->
              <div class="md:col-span-2 bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Deskripsi Kegiatan <span class="text-red-500">*</span>
                </label>
                <textarea name="deskripsi_kegiatan" id="deskripsi_kegiatan"
                          rows="4" required
                          placeholder="Tuliskan deskripsi kegiatan..."
                          class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-100"><%= old.deskripsi_kegiatan || laporan.deskripsi_kegiatan %></textarea>
                <div class="error-message text-red-500 text-xs mt-1 hidden"></div>
              </div>

            </div>
          </section>
          <!-- ================= Informasi Keuangan ================= -->
          <section>
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Informasi Keuangan</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
  <label class="block text-sm font-medium text-gray-700 mb-2">Sumber Dana</label>
  <div class="flex flex-col gap-3">
    <label class="flex items-center gap-2 cursor-pointer">
      <input type="radio" name="sumber_dana_radio" value="uang_kas"
        <%= (old.sumber_dana || laporan.sumber_dana) === 'Uang Kas HMSI' ? 'checked' : '' %> >
      <span>Uang Kas HMSI</span>
    </label>

    <label class="flex items-center gap-2 cursor-pointer">
      <input type="radio" name="sumber_dana_radio" value="lainnya"
        <%= (old.sumber_dana || laporan.sumber_dana) && (old.sumber_dana || laporan.sumber_dana) !== 'Uang Kas HMSI' ? 'checked' : '' %> >
      <span>Lainnya:</span>
    </label>

    <input type="text" name="sumber_dana_text" id="sumber_dana_text"
      value="<%= (old.sumber_dana || laporan.sumber_dana) !== 'Uang Kas HMSI' ? (old.sumber_dana || laporan.sumber_dana) : '' %>"
      placeholder="Contoh: Departemen SI"
      class="mt-2 w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100"
      <%= (old.sumber_dana || laporan.sumber_dana) === 'Uang Kas HMSI' ? 'disabled' : '' %>>
  </div>

  <!-- âœ… Tambahkan baris ini -->
  <div class="error-message text-red-500 text-xs mt-1 hidden"></div>
</div>


              <!-- Total Dana -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">Total Dana Kegiatan (Rp)</label>
                <input type="text" name="dana_digunakan" id="dana_digunakan"
                  value="<%= old.dana_digunakan || laporan.dana_digunakan %>"
                  placeholder="3000000"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100">
              </div>

              <!-- Dana Terpakai -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">Dana Terpakai (Rp)</label>
                <input type="text" name="dana_terpakai" id="dana_terpakai"
                  value="<%= old.dana_terpakai || laporan.dana_terpakai %>"
                  placeholder="2500000"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100">
              </div>

            </div>
          </section>

          <!-- ================= Target Pencapaian ================= -->
          <section>
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Target Pencapaian</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Kualitatif -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Persentase Target Kualitatif (%)
                </label>
                <input type="number" name="persentase_kualitatif"
                  value="<%= old.persentase_kualitatif || laporan.persentase_kualitatif %>"
                  placeholder="Contoh: 80"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100">
              </div>

              <!-- Kuantitatif -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Persentase Target Kuantitatif (%)
                </label>
                <input type="number" name="persentase_kuantitatif"
                  value="<%= old.persentase_kuantitatif || laporan.persentase_kuantitatif %>"
                  placeholder="Contoh: 75"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100">
              </div>

              <!-- Deskripsi Kualitatif -->
              <div class="md:col-span-2 bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Deskripsi Target Kualitatif
                </label>
                <textarea name="deskripsi_target_kualitatif" rows="3"
                  placeholder="Tuliskan deskripsi target kualitatif..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-100"><%= old.deskripsi_target_kualitatif || laporan.deskripsi_target_kualitatif %></textarea>
              </div>

              <!-- Deskripsi Kuantitatif -->
              <div class="md:col-span-2 bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Deskripsi Target Kuantitatif
                </label>
                <textarea name="deskripsi_target_kuantitatif" rows="3"
                  placeholder="Tuliskan deskripsi target kuantitatif..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-100"><%= old.deskripsi_target_kuantitatif || laporan.deskripsi_target_kuantitatif %></textarea>
              </div>

            </div>
          </section>

          <!-- ================= Sasaran & Kendala ================= -->
          <section>
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Sasaran, Kendala & Solusi</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Sasaran -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">Sasaran</label>
                <input type="text" name="sasaran"
                  value="<%= old.sasaran || laporan.sasaran %>"
                  placeholder="Contoh: Mahasiswa baru SI"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-100">
              </div>

              <!-- Kendala -->
              <div class="bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">Kendala</label>
                <textarea name="kendala" rows="3"
                  placeholder="Tuliskan kendala yang dihadapi..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-100"><%= old.kendala || laporan.kendala %></textarea>
              </div>

              <!-- Solusi -->
              <div class="md:col-span-2 bg-gray-50 border border-gray-200 rounded-xl p-4 hover:bg-gray-100/50 transition">
                <label class="block text-sm font-medium text-gray-700 mb-2">Solusi</label>
                <textarea name="solusi" rows="3"
                  placeholder="Tuliskan solusi yang dilakukan..."
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-100"><%= old.solusi || laporan.solusi %></textarea>
              </div>

            </div>
          </section>
          <!-- ================= File Dokumentasi ================= -->
          <section>
            <h4 class="text-lg font-semibold text-gray-700 mb-1">
              File Dokumentasi <span class="text-red-500">*</span>
            </h4>
            <p class="text-sm text-gray-500 mb-4">Upload file pendukung laporan kegiatan</p>

            <!-- âœ… File Dokumentasi Sebelumnya -->
            <% if (laporan.dokumentasi) { %>
              <div class="mb-3">
                <p class="text-sm text-gray-600 mb-2">File Sebelumnya:</p>
                <a href="/uploads/laporan/<%= laporan.dokumentasi %>" target="_blank"
                   class="text-sm text-orange-600 underline hover:text-orange-700">
                  <i class="fa fa-file mr-1"></i>
                  <%= laporan.dokumentasi.split('/').pop() %>
                </a>
              </div>
            <% } %>

            <!-- âœ… Dropzone Upload Baru -->
            <div id="dropzone"
                 class="border-2 border-dashed border-gray-300 rounded-xl p-10 bg-gray-50/50 text-center cursor-pointer 
                        transition duration-200 hover:border-orange-400 hover:bg-orange-50/30 flex flex-col items-center gap-4">
              <input type="file" id="fileUpload" name="dokumentasi" class="hidden"
                     accept=".pdf,.jpg,.jpeg,.png">
              <div class="text-4xl text-gray-400">ðŸ“„</div>
              <label for="fileUpload" class="cursor-pointer">
                <span class="px-6 py-3 bg-orange-500 text-white rounded-lg text-sm font-medium transition duration-200 hover:bg-orange-600">
                  Pilih File atau Drag & Drop
                </span>
              </label>
              <p class="text-sm text-gray-600">Format: PDF, JPG, PNG â€” Maks. 5MB</p>
            </div>
            <p id="fileName" class="text-sm text-gray-600 mt-3"></p>
          </section>

          <!-- ================= Tombol Aksi ================= -->
          <div class="pt-6 border-t border-gray-200 flex justify-end gap-4">
  <a href="<%= redirectTarget %>"
     class="px-8 py-3 border border-gray-300 rounded-xl text-sm font-medium bg-white text-gray-700 hover:shadow-md hover:border-gray-400">
    Batal
  </a>
  <button type="submit" id="submitBtn"
          class="flex items-center justify-center gap-2 px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold hover:bg-orange-600 hover:shadow-md">
    <span id="btnText">Simpan</span>
    <div id="btnSpinner" class="hidden w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
  </button>
</div>
        </form>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <!-- ======================= Modal Section ======================= -->

  <!-- âœ… Modal Sukses -->
  <div id="successModal" class="fixed inset-0 hidden bg-black/50 flex items-center justify-center z-50">
    <div id="successModalContent"
         class="bg-white rounded-2xl shadow-2xl p-8 w-[26rem] transform scale-95 opacity-0 transition-all duration-300">
      <div class="text-center">
        <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-5">
          <i class="fa-solid fa-check text-green-500 text-4xl"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">Berhasil!</h3>
        <p class="text-gray-600 text-sm mb-6">
          Laporan berhasil diperbarui dan disimpan ke sistem.
        </p>
        <button id="closeSuccessModal"
                class="w-full py-3 bg-orange-500 text-white rounded-xl font-medium hover:bg-orange-600 transition">
          Kembali ke Daftar Laporan
        </button>
      </div>
    </div>
  </div>

  <!-- âŒ Modal Error -->
  <div id="errorModal" class="fixed inset-0 hidden bg-black/40 flex items-center justify-center z-50">
    <div id="errorModalContent"
         class="bg-white rounded-2xl shadow-xl p-6 w-96 transform scale-95 opacity-0 transition-all duration-300">
      <div class="text-center">
        <div class="text-red-500 text-4xl mb-2">
          <i class="fa-solid fa-circle-xmark"></i>
        </div>
        <h3 class="text-lg font-semibold text-red-600 mb-2">Gagal Menyimpan</h3>
        <p id="errorMessage" class="text-sm text-gray-600 mb-4">
          Terjadi kesalahan saat menyimpan laporan.
        </p>
        <button id="closeErrorModal"
                class="w-full py-2 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 transition">
          Tutup
        </button>
      </div>
    </div>
  </div>

  <!-- âš ï¸ Modal Validasi -->
  <div id="validationModal" class="fixed inset-0 hidden bg-black/40 flex items-center justify-center z-50">
    <div id="validationModalContent"
         class="bg-white rounded-2xl shadow-xl p-6 w-96 transform scale-95 opacity-0 transition-all duration-300">
      <div class="text-center">
        <div class="text-orange-500 text-4xl mb-2">
          <i class="fa-solid fa-triangle-exclamation"></i>
        </div>
        <h3 class="text-lg font-semibold text-orange-600 mb-2">Validasi Gagal</h3>
        <p class="text-sm text-gray-600 mb-4">
          Beberapa field wajib belum diisi dengan benar.
        </p>
        <button id="closeValidationModal"
                class="w-full py-2 bg-orange-500 text-white rounded-lg font-medium hover:bg-orange-600 transition">
          Tutup
        </button>
      </div>
    </div>
  </div>

  <!-- âš ï¸ Modal File Terlalu Besar -->
  <div id="fileSizeModal" class="fixed inset-0 hidden bg-black/40 flex items-center justify-center z-50">
    <div id="fileSizeModalContent"
         class="bg-white rounded-2xl shadow-2xl p-8 w-[26rem] transform scale-95 opacity-0 transition-all duration-300">
      <div class="text-center">
        <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-5">
          <i class="fa-solid fa-triangle-exclamation text-orange-500 text-4xl"></i>
        </div>
        <h3 class="text-2xl font-bold text-gray-800 mb-2">File Terlalu Besar!</h3>
        <p class="text-gray-600 text-sm mb-6 leading-relaxed">
          Ukuran file maksimal yang diperbolehkan adalah <b>5MB</b>.<br>
          Silakan pilih file yang lebih kecil.
        </p>
        <button id="closeFileSizeModal"
                class="w-full py-3 bg-orange-500 text-white rounded-xl font-semibold hover:bg-orange-600 transition">
          Mengerti
        </button>
      </div>
    </div>
  </div>

  <!-- ======================= SCRIPT SECTION ======================= -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
  // Ambil redirectTarget dari server
  const redirectTarget = "<%= redirectTarget %>";

  function showModal(modalId) {
    const modal = document.getElementById(modalId);
    const content = document.getElementById(modalId + "Content");
    modal.classList.remove("hidden");
    setTimeout(() => {
      content.classList.remove("scale-95", "opacity-0");
      content.classList.add("scale-100", "opacity-100");
    }, 10);
  }

  function hideModal(modalId) {
    const modal = document.getElementById(modalId);
    const content = document.getElementById(modalId + "Content");
    content.classList.remove("scale-100", "opacity-100");
    content.classList.add("scale-95", "opacity-0");
    setTimeout(() => modal.classList.add("hidden"), 300);

    // âœ… PERBAIKAN: Redirect dinamis berdasarkan status evaluasi
    if (modalId === "successModal") {
      setTimeout(() => {
        window.location.href = redirectTarget + "?success=Laporan berhasil diperbarui";
      }, 350);
    }
  }

  const modalMappings = {
    closeSuccessModal: "successModal",
    closeErrorModal: "errorModal",
    closeValidationModal: "validationModal",
    closeFileSizeModal: "fileSizeModal",
  };
  Object.entries(modalMappings).forEach(([btnId, modalId]) => {
    const btn = document.getElementById(btnId);
    if (btn) btn.addEventListener("click", () => hideModal(modalId));
  });

  ["successModal", "errorModal", "validationModal", "fileSizeModal"].forEach((id) => {
    const modal = document.getElementById(id);
    if (modal) modal.addEventListener("click", (e) => {
      if (e.target.id === id) hideModal(id);
    });
  });

  // ========================= DROPDOWN PROGRAM KERJA =========================
  const btn = document.getElementById("prokerDropdownBtn");
  const menu = document.getElementById("prokerDropdownMenu");
  const input = document.getElementById("prokerInput");
  const label = document.getElementById("prokerDropdownLabel");

  if (btn && menu) {
    btn.addEventListener("click", (e) => {
      e.stopPropagation();
      menu.classList.toggle("hidden");
    });

    const items = menu.querySelectorAll("button[data-value]");
    items.forEach((item) => {
      item.addEventListener("click", () => {
        input.value = item.dataset.value;
        label.textContent = item.textContent;
        label.classList.remove("text-gray-500");
        label.classList.add("text-gray-900");
        menu.classList.add("hidden");
        validateField(input);
      });
    });

    window.addEventListener("click", (e) => {
      if (!btn.contains(e.target) && !menu.contains(e.target)) {
        menu.classList.add("hidden");
      }
    });
  }

  // ========================= RADIO SUMBER DANA =========================
  const radios = document.querySelectorAll('input[name="sumber_dana_radio"]');
  const textInput = document.querySelector('input[name="sumber_dana_text"]');

  radios.forEach((r) => {
    r.addEventListener("change", () => {
      if (r.value === "lainnya" && r.checked) {
        textInput.disabled = false;
        textInput.focus();
        textInput.required = true;
      } else if (r.value === "uang_kas" && r.checked) {
        textInput.disabled = true;
        textInput.value = "";
        textInput.required = false;
      }
      validateSumberDana();
    });
  });

  // ========================= FILE UPLOAD (DROPZONE) =========================
  const dropzone = document.getElementById("dropzone");
  const fileInput = document.getElementById("fileUpload");
  const fileName = document.getElementById("fileName");

  dropzone.addEventListener("dragover", (e) => {
    e.preventDefault();
    dropzone.classList.add("border-orange-400", "bg-orange-50");
  });
  dropzone.addEventListener("dragleave", () => {
    dropzone.classList.remove("border-orange-400", "bg-orange-50");
  });
  dropzone.addEventListener("drop", (e) => {
    e.preventDefault();
    dropzone.classList.remove("border-orange-400", "bg-orange-50");
    const files = e.dataTransfer.files;
    if (files.length > 0) {
      if (files[0].size > 5 * 1024 * 1024) {
        showModal("fileSizeModal");
        return;
      }
      fileInput.files = files;
      fileName.textContent = `File dipilih: ${files[0].name}`;
      validateField(fileInput);
    }
  });

  fileInput.addEventListener("change", (e) => {
    if (e.target.files.length > 0) {
      if (e.target.files[0].size > 5 * 1024 * 1024) {
        showModal("fileSizeModal");
        fileInput.value = "";
        fileName.textContent = "";
        return;
      }
      fileName.textContent = `File dipilih: ${e.target.files[0].name}`;
      validateField(fileInput);
    }
  });

  // ========================= VALIDATION HELPERS =========================
  function validateField(field) {
    const errorDiv =
      field.closest(".bg-gray-50")?.querySelector(".error-message") ||
      field.closest("div")?.querySelector(".error-message");
    if (!errorDiv) return true;

    let isValid = true;
    let message = "";

    if (field.hasAttribute("required")) {
      if (field.type === "file") {
        isValid = field.files.length > 0;
        message = "File dokumentasi wajib diunggah";
      } else if (field.value.trim() === "") {
        isValid = false;
        message = "Field ini wajib diisi";
      }
    }

    if (field.type === "number" && field.value !== "") {
      const value = parseFloat(field.value);
      if (value < 0) {
        isValid = false;
        message = "Nilai tidak boleh negatif";
      }
      if (field.hasAttribute("max") && value > parseFloat(field.getAttribute("max"))) {
        isValid = false;
        message = `Nilai maksimal ${field.getAttribute("max")}`;
      }
    }

    if (!isValid) {
      errorDiv.textContent = message;
      errorDiv.classList.remove("hidden");
      field.classList.add("border-red-500");
    } else {
      errorDiv.classList.add("hidden");
      field.classList.remove("border-red-500");
    }
    return isValid;
  }

  function validateSumberDana() {
    const radioChecked = document.querySelector('input[name="sumber_dana_radio"]:checked');
    const textInput = document.querySelector('input[name="sumber_dana_text"]');
    const errorDiv = document
      .querySelector('input[name="sumber_dana_radio"]')
      .closest(".bg-gray-50")
      .querySelector(".error-message");

    let valid = true, msg = "";
    if (!radioChecked) {
      valid = false;
      msg = "Pilih sumber dana";
    } else if (radioChecked.value === "lainnya" && textInput.value.trim() === "") {
      valid = false;
      msg = "Isi sumber dana lainnya";
    }

    if (!valid) {
      errorDiv.textContent = msg;
      errorDiv.classList.remove("hidden");
    } else {
      errorDiv.classList.add("hidden");
    }
    return valid;
  }

  // ========================= SUBMIT HANDLER =========================
  const form = document.getElementById("editLaporanForm");
  const submitBtn = document.getElementById("submitBtn");
  const btnText = document.getElementById("btnText");
  const btnSpinner = document.getElementById("btnSpinner");
  let submitting = false;

  form.addEventListener("submit", (e) => {
    e.preventDefault();
    if (submitting) return;
    if (!validateSumberDana()) return showModal("validationModal");

    submitting = true;
    submitBtn.disabled = true;
    btnText.textContent = "Menyimpan...";
    btnSpinner.classList.remove("hidden");

    const formData = new FormData(form);
    fetch(form.action, {
      method: "POST",
      body: formData,
      credentials: "same-origin",
    })
      .then(async (res) => {
        const text = await res.text();
        if (res.ok) showModal("successModal");
        else {
          document.getElementById("errorMessage").textContent =
            "Terjadi kesalahan: " + (text || "Gagal menyimpan laporan");
          showModal("errorModal");
        }
      })
      .catch((err) => {
        document.getElementById("errorMessage").textContent =
          "Terjadi kesalahan jaringan: " + err.message;
        showModal("errorModal");
      })
      .finally(() => {
        submitting = false;
        submitBtn.disabled = false;
        btnText.textContent = "Simpan";
        btnSpinner.classList.add("hidden");
      });
  });
});
