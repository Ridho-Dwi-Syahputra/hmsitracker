<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Dashboard HMSI â€“ <%= user.nama_divisi || 'Divisi HMSI' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { user: user, activeNav: 'dashboard' }) %>

  <!-- Main Content -->
  <main class="lg:ml-80 px-6 pt-20 pb-24">

    <!-- Header Card -->
    <div class="max-w-6xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200 mb-8">
      <div class="bg-orange-500 text-white px-6 py-8 flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold mb-2">Selamat Datang, <%= user.nama || user.name %> ðŸ‘‹</h1>
          <p class="text-orange-100 text-lg">Dashboard HMSI â€“ Kelola program kerja dan laporan divisi Anda</p>
          <p class="text-sm text-gray-200 mt-1">
            Data untuk Divisi <span class="font-semibold text-white"><%= user.nama_divisi || 'Belum terdaftar' %></span>
          </p>
        </div>
        <div class="hidden md:block">
          <i class="fa-solid fa-chart-line text-6xl text-orange-200"></i>
        </div>
      </div>
    </div>

    <!-- Statistik Cards -->
    <div class="max-w-6xl mx-auto mb-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        
        <!-- Total Proker -->
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-orange-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Proker</p>
              <p class="text-2xl font-bold text-gray-800">
                <%= typeof totalProker !== 'undefined' ? totalProker : 0 %>
              </p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
              <i class="fa-solid fa-tasks text-blue-600 text-xl"></i>
            </div>
          </div>
        </div>

        <!-- Program Selesai -->
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-orange-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Program Selesai</p>
              <p class="text-2xl font-bold text-green-600">
                <%= typeof prokerSelesai !== 'undefined' ? prokerSelesai : 0 %>
              </p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
              <i class="fa-solid fa-check-circle text-green-600 text-xl"></i>
            </div>
          </div>
        </div>

        <!-- Program Berjalan -->
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-orange-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Program Berjalan</p>
              <p class="text-2xl font-bold text-orange-600">
                <%= typeof prokerBerjalan !== 'undefined' ? prokerBerjalan : 0 %>
              </p>
            </div>
            <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center">
              <i class="fa-solid fa-clock text-orange-600 text-xl"></i>
            </div>
          </div>
        </div>

        <!-- Total Laporan -->
        <div class="bg-white p-6 rounded-2xl shadow-sm border border-orange-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Laporan</p>
              <p class="text-2xl font-bold text-purple-600">
                <%= typeof totalLaporan !== 'undefined' ? totalLaporan : 0 %>
              </p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
              <i class="fa-solid fa-file-alt text-purple-600 text-xl"></i>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Aksi Cepat -->
    <div class="max-w-6xl mx-auto">
      <div class="bg-white rounded-2xl border border-orange-200 shadow-sm p-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center">
          <i class="fa-solid fa-bolt text-orange-500 mr-2"></i>
          Aksi Cepat
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/hmsi/kelola-proker" 
             class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-orange-300 hover:bg-orange-50 transition">
            <i class="fa-solid fa-plus text-orange-500"></i>
            <span class="text-sm font-medium text-gray-700">Buat Program Kerja</span>
          </a>
          <a href="/hmsi/laporan" 
             class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 transition">
            <i class="fa-solid fa-upload text-blue-500"></i>
            <span class="text-sm font-medium text-gray-700">Upload Laporan</span>
          </a>
          <a href="/hmsi/notifikasi" 
             class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-green-300 hover:bg-green-50 transition">
            <i class="fa-solid fa-bell text-green-500"></i>
            <span class="text-sm font-medium text-gray-700">Lihat Notifikasi</span>
          </a>
          <a href="/hmsi/profile" 
             class="flex items-center gap-3 p-4 border border-gray-200 rounded-lg hover:border-purple-300 hover:bg-purple-50 transition">
            <i class="fa-solid fa-user text-purple-500"></i>
            <span class="text-sm font-medium text-gray-700">Edit Profil</span>
          </a>
        </div>
      </div>
    </div>

  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

</body>
</html>
