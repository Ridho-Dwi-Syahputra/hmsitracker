<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- FontAwesome -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    /* Custom styles untuk tabel */
    .table-fixed {
      table-layout: fixed;
    }
    .table-fixed th:nth-child(1) { width: 60px; }  /* No */
    .table-fixed th:nth-child(2) { width: 30%; }   /* Judul */
    .table-fixed th:nth-child(3) { width: 22%; }   /* Program Kerja */
    .table-fixed th:nth-child(4) { width: 15%; }   /* Divisi */
    .table-fixed th:nth-child(5) { width: 18%; }   /* Tanggal */
    .table-fixed th:nth-child(6) { width: 120px; }  /* Aksi */

    .text-ellipsis {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  </style>
</head>
<body class="bg-gray-50 min-h-screen">
  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount || 0 }) %>
  
  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'Laporan', user: user }) %>

  <!-- Wrapper -->
  <div class="lg:ml-80 pt-20 px-6 pb-10">
    <div class="max-w-7xl mx-auto bg-white rounded-2xl border border-orange-200 shadow-md overflow-hidden">

      <!-- Header -->
      <div class="bg-orange-500 px-6 py-4 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-white"><%= title %></h1>
          <p class="text-sm text-orange-100">Kelola laporan kegiatan divisi Anda</p>
        </div>
        <a href="/hmsi/laporan/tambah" 
           class="px-4 py-2 bg-white text-orange-500 rounded-lg hover:bg-orange-50 transition font-semibold">
          <i class="fa-solid fa-plus mr-2"></i>Tambah Laporan
        </a>
      </div>

      <!-- Isi Konten -->
      <div class="p-6">
        <!-- Alert Messages -->
        <% if (successMsg) { %>
          <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
            <i class="fa-solid fa-check-circle mr-2"></i><%= successMsg %>
          </div>
        <% } %>
        <% if (errorMsg) { %>
          <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            <i class="fa-solid fa-exclamation-circle mr-2"></i><%= errorMsg %>
          </div>
        <% } %>

        <!-- Search & Filter -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6 flex-wrap">

          <!-- Search -->
          <div class="flex-1">
            <div class="relative">
              <input id="searchInput" type="text" placeholder="Cari laporan..."
                class="w-full pl-10 pr-4 py-3 border rounded-xl text-sm
                       border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-500
                       placeholder-gray-400 transition-all duration-300">
              <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
            </div>
          </div>

          <!-- Filter Program Kerja -->
          <div class="relative">
            <button id="prokerDropdownBtn"
              class="flex items-center justify-between gap-2 px-4 py-3 border border-gray-300 rounded-xl text-sm bg-white
                     hover:border-orange-500 hover:shadow-md focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200">
              <span id="prokerDropdownLabel">Semua Program Kerja</span>
              <i class="fa-solid fa-chevron-down text-orange-500"></i>
            </button>
            <div id="prokerDropdownMenu"
              class="hidden absolute right-0 mt-2 w-60 bg-white border border-orange-200 rounded-lg shadow-lg z-10 max-h-60 overflow-y-auto">
              <ul class="text-sm text-gray-700">
                <li><button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="all">Semua Program Kerja</button></li>
                <% 
                  const uniqueProker = [...new Set(laporan.map(l => l.namaProker).filter(Boolean))]; 
                  uniqueProker.forEach(proker => { 
                %>
                  <li>
                    <button class="w-full text-left px-4 py-2 hover:bg-orange-100" data-value="<%= proker %>"><%= proker %></button>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>

        <% if (!laporan || laporan.length === 0) { %>
          <!-- Empty State -->
          <div class="flex flex-col items-center space-y-4 py-20">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
              <i class="fa-solid fa-folder-open text-2xl text-gray-400"></i>
            </div>
            <div class="text-center">
              <div class="text-xl font-semibold text-gray-800 mb-2">Belum ada laporan</div>
              <div class="text-gray-500">Belum ada laporan kegiatan yang diunggah</div>
            </div>
          </div>
        <% } else { %>
          <!-- Tabel -->
          <div class="overflow-x-auto p-2 shadow-sm rounded-xl">
            <table class="min-w-full text-sm text-center border border-orange-200 rounded-xl overflow-hidden border-separate border-spacing-0 divide-x divide-gray-200 table-fixed">
              <thead class="bg-orange-100 text-gray-700">
                <tr>
                  <th class="py-3 px-4 font-semibold border border-orange-200">No</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200 text-left">Judul Laporan</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Program Kerja</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Divisi</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Tanggal Upload</th>
                  <th class="py-3 px-4 font-semibold border border-orange-200">Aksi</th>
                </tr>
              </thead>
              <tbody id="laporanTable">
                <% laporan.forEach(function(l, i) { 
                  // Cek status evaluasi dari DPA
                  const isApproved = l.status_konfirmasi === 'Selesai';
                %>
                  <tr class="hover:bg-orange-50 transition">
                    <td class="py-3 px-4 border border-orange-100"><%= i + 1 %></td>
                    <td class="py-3 px-4 font-medium text-gray-800 border border-orange-100 text-left">
                      <div class="text-ellipsis" title="<%= l.judul_laporan %>"><%= l.judul_laporan %></div>
                    </td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100" data-col="proker">
                      <div class="text-ellipsis" title="<%= l.namaProker || '-' %>"><%= l.namaProker || "-" %></div>
                    </td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100" data-col="divisi"><%= l.divisi || "-" %></td>
                    <td class="py-3 px-4 text-gray-600 border border-orange-100"><%= l.tanggalFormatted %></td>
                    
                    <!-- Aksi dengan Conditional Disable -->
                    <td class="py-3 px-4 border border-orange-100">
                      <div class="flex justify-center gap-2">
                        <!-- Tombol Lihat Detail (Selalu Aktif) -->
                        <a href="/hmsi/laporan/<%= l.id_laporan %>" 
                          class="text-blue-500 hover:text-blue-700 transition transform hover:scale-110 p-1" 
                          title="Lihat Detail">
                          <i class="fa-solid fa-eye text-lg"></i>
                        </a>
                        
                        <% if (isApproved) { %>
                          <!-- Button EDIT Disabled (Sudah Disetujui) -->
                          <button disabled
                            class="text-gray-300 cursor-not-allowed p-1 opacity-50" 
                            title="Tidak dapat diedit (sudah disetujui DPA)">
                            <i class="fa-solid fa-edit text-lg"></i>
                          </button>
                          
                          <!-- Button HAPUS Disabled (Sudah Disetujui) -->
                          <button disabled
                            class="text-gray-300 cursor-not-allowed p-1 opacity-50" 
                            title="Tidak dapat dihapus (sudah disetujui DPA)">
                            <i class="fa-solid fa-trash text-lg"></i>
                          </button>
                        <% } else { %>
                          <!-- Button EDIT Aktif -->
                          <a href="/hmsi/laporan/<%= l.id_laporan %>/edit" 
                            class="text-orange-500 hover:text-orange-700 transition transform hover:scale-110 p-1" 
                            title="Edit Laporan">
                            <i class="fa-solid fa-edit text-lg"></i>
                          </a>
                          
                          <!-- Button HAPUS Aktif -->
                          <a href="/hmsi/laporan/<%= l.id_laporan %>/delete" 
                            onclick="return confirm('Yakin ingin menghapus laporan ini?')"
                            class="text-red-500 hover:text-red-700 transition transform hover:scale-110 p-1" 
                            title="Hapus Laporan">
                            <i class="fa-solid fa-trash text-lg"></i>
                          </a>
                        <% } %>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <div class="flex justify-center items-center gap-2 mt-6" id="pagination">
            <button id="prevPage" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 disabled:opacity-50">Prev</button>
            <span id="pageInfo" class="text-gray-700"></span>
            <button id="nextPage" class="px-4 py-2 bg-orange-100 text-orange-700 rounded-lg hover:bg-orange-200 disabled:opacity-50">Next</button>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const searchInput = document.getElementById("searchInput");
      const tbody = document.getElementById("laporanTable");
      let rows = Array.from(tbody?.querySelectorAll("tr") || []);

      const prokerBtn = document.getElementById("prokerDropdownBtn");
      const prokerMenu = document.getElementById("prokerDropdownMenu");
      const prokerLabel = document.getElementById("prokerDropdownLabel");

      const rowsPerPage = 10;
      let currentPage = 1;

      // Close dropdowns when clicking outside
      document.addEventListener("click", (e) => {
        if (!prokerBtn.contains(e.target)) prokerMenu.classList.add("hidden");
      });

      // Toggle dropdowns
      prokerBtn.addEventListener("click", (e) => {
        e.stopPropagation();
        prokerMenu.classList.toggle("hidden");
      });

      // Dropdown select
      prokerMenu.querySelectorAll("button").forEach(btn => {
        btn.addEventListener("click", () => {
          prokerLabel.textContent = btn.dataset.value === "all" ? "Semua Program Kerja" : btn.dataset.value;
          prokerMenu.classList.add("hidden");
          currentPage = 1;
          filterRows();
        });
      });

      function filterRows() {
        const searchValue = searchInput.value.toLowerCase();
        const selectedProker = prokerLabel.textContent.trim();

        rows.forEach(row => {
          const judul = row.cells[1]?.innerText.toLowerCase() || "";
          const program = row.cells[2]?.innerText.trim() || "";

          let matchSearch = judul.includes(searchValue) || program.toLowerCase().includes(searchValue);
          let matchProker = selectedProker === "Semua Program Kerja" || program === selectedProker;

          row.dataset.visible = (matchSearch && matchProker) ? "true" : "false";
        });
        paginate();
      }

      function paginate() {
        let visibleRows = rows.filter(row => row.dataset.visible !== "false");
        let totalPages = Math.ceil(visibleRows.length / rowsPerPage);
        if (currentPage > totalPages) currentPage = totalPages || 1;

        rows.forEach(row => row.style.display = "none");
        visibleRows.forEach((row, index) => {
          if (index >= (currentPage-1)*rowsPerPage && index < currentPage*rowsPerPage) {
            row.style.display = "";
          }
        });

        document.getElementById("pageInfo").textContent = `Halaman ${currentPage} dari ${totalPages || 1}`;
        document.getElementById("prevPage").disabled = currentPage === 1;
        document.getElementById("nextPage").disabled = currentPage === totalPages || totalPages === 0;
      }

      searchInput.addEventListener("input", () => { currentPage = 1; filterRows(); });
      document.getElementById("prevPage").addEventListener("click", () => { if (currentPage > 1) { currentPage--; paginate(); } });
      document.getElementById("nextPage").addEventListener("click", () => {
        let visibleRows = rows.filter(row => row.dataset.visible !== "false");
        let totalPages = Math.ceil(visibleRows.length / rowsPerPage);
        if (currentPage < totalPages) { currentPage++; paginate(); }
      });

      rows.forEach(row => row.dataset.visible = "true");
      paginate();
    });
  </script>
</body>
</html>