<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Profil Pengurus</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { user: user, activeNav: 'Profil' }) %>

  <!-- Wrapper -->
  <div class="lg:ml-80 px-4 sm:px-6 py-8">
    <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-xl sm:text-2xl font-bold">Profil Pengurus</h1>
        <p class="text-sm text-orange-100">Informasi akun & pengaturan</p>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8 space-y-8">

        <!-- Flash Messages -->
        <% if (errorMsg && errorMsg.length > 0) { %>
          <div class="p-4 bg-red-100 text-red-700 rounded-xl text-sm"><%= errorMsg %></div>
        <% } %>
        <% if (successMsg && successMsg.length > 0) { %>
          <div class="p-4 bg-green-100 text-green-700 rounded-xl text-sm"><%= successMsg %></div>
        <% } %>

        <!-- Foto + Info -->
        <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6">
          <img src="/<%= user.foto_profile || 'default-profile.png' %>?v=<%= Date.now() %>"
               class="w-24 h-24 sm:w-28 sm:h-28 rounded-full border shadow-md object-cover"
               alt="Foto Profil"
               onerror="this.onerror=null;this.src='/default-profile.png?v=<%= Date.now() %>'">

          <div class="text-center sm:text-left">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-800"><%= user.nama %></h2>
            <p class="text-sm text-gray-500">NIM: <%= user.id_anggota %></p>
          </div>
        </div>

        <!-- Info Grid -->
<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
  <div class="p-4 bg-orange-50 rounded-xl border">
    <p class="text-xs text-gray-500">Email</p>
    <p class="text-sm font-medium text-gray-800 break-all"><%= user.email %></p>
  </div>
  <div class="p-4 bg-orange-50 rounded-xl border">
    <p class="text-xs text-gray-500">Divisi</p>
    <p class="text-sm font-medium text-gray-800"><%= user.divisi %></p>
  </div>
</div>


        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row justify-between gap-3 pt-6 border-t">
          <a href="/hmsi/dashboard"
             class="w-full sm:w-auto px-4 py-2 border border-gray-400 text-gray-600 rounded-xl text-center hover:bg-gray-100">
            Kembali
          </a>
          <a href="/hmsi/profile/edit"
             class="w-full sm:w-auto bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-xl font-medium text-center">
            Edit Profil
          </a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
