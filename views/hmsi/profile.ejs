<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Profil Pengurus</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { user: user, activeNav: 'Settings' }) %>

  <!-- Wrapper -->
  <div class="lg:ml-80 px-6 py-10 animate-fade-in">
    <div class="max-w-3xl mx-auto bg-white rounded-2xl border border-gray-200 shadow-md overflow-hidden">

      <!-- Header -->
      <div class="bg-gradient-to-r from-orange-500 to-orange-600 px-8 py-6">
        <h1 class="text-2xl font-bold text-white">Profil Pengurus</h1>
        <p class="text-orange-100 text-sm">Informasi akun & pengaturan</p>
      </div>

      <!-- Content -->
      <div class="p-8">
        <!-- Profile Info -->
        <div class="flex flex-col sm:flex-row items-center gap-6 mb-8">
          <div class="relative group">
            <% if (user.foto_profile) { %>
              <img src="/uploads/<%= user.foto_profile %>" alt="Foto Profil"
                class="w-28 h-28 rounded-full border-4 border-white shadow-lg object-cover">
            <% } else { %>
              <div class="w-28 h-28 rounded-full bg-gradient-to-br from-orange-400 to-orange-500 flex items-center justify-center text-white font-bold text-3xl shadow-lg">
                <%= (user.nama || 'A').charAt(0).toUpperCase() %>
              </div>
            <% } %>

            <!-- Overlay Upload -->
            <form action="/hmsi/profile/upload-foto" method="POST" enctype="multipart/form-data"
              class="absolute bottom-0 right-0 transform translate-x-2 translate-y-2">
              <label for="fotoUpload" class="cursor-pointer bg-white p-2 rounded-full shadow-lg border group-hover:bg-orange-50 transition">
                <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              </label>
              <input id="fotoUpload" type="file" name="foto" class="hidden" onchange="this.form.submit()">
            </form>
          </div>
          <div class="text-center sm:text-left">
            <h2 class="text-xl font-semibold text-gray-800"><%= user.nama %></h2>
            <p class="text-gray-500 text-sm">NIM: <%= user.id_anggota %></p>
          </div>
        </div>

        <!-- Detail -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
          <div class="flex items-center gap-3">
            <div class="p-2 bg-orange-100 rounded-lg">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M16 12H8m0 0l4-4m-4 4l4 4m8-4a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500">Email</p>
              <p class="font-medium text-gray-800"><%= user.email %></p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="p-2 bg-orange-100 rounded-lg">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 7h18M3 12h18M3 17h18"/>
              </svg>
            </div>
            <div>
              <p class="text-sm text-gray-500">Divisi</p>
              <p class="font-medium text-gray-800"><%= user.divisi || '-' %></p>
            </div>
          </div>
        </div>

        <!-- Tombol edit profil -->
        <div class="flex justify-end">
          <button id="editProfileBtn"
            class="px-6 py-3 bg-orange-500 text-white font-semibold rounded-lg shadow hover:bg-orange-600 transition">
            Edit Profil
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Edit Profile -->
  <div id="editProfileModal"
    class="hidden fixed inset-0 bg-black bg-opacity-40 flex items-center justify-center z-50 px-4">
    <div class="bg-white rounded-2xl shadow-lg w-full max-w-lg p-6 animate-fade-in">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Edit Profil</h2>
      <form action="/hmsi/profile/update" method="POST" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Nama Baru</label>
          <input type="text" name="nama" value="<%= user.nama %>"
            class="w-full mt-1 px-4 py-2 border rounded-lg focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Password Baru</label>
          <input type="password" name="password"
            class="w-full mt-1 px-4 py-2 border rounded-lg focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Konfirmasi Password</label>
          <input type="password" name="confirmPassword"
            class="w-full mt-1 px-4 py-2 border rounded-lg focus:ring-orange-500 focus:border-orange-500">
        </div>
        <div class="flex justify-end gap-3 pt-4">
          <button type="button" id="cancelEdit"
            class="px-4 py-2 border rounded-lg text-gray-600 hover:bg-gray-100">Batal</button>
          <button type="submit"
            class="px-6 py-2 bg-orange-500 text-white rounded-lg font-medium hover:bg-orange-600">Simpan</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Animasi -->
  <style>
    @keyframes fadeIn { from {opacity:0;} to {opacity:1;} }
    .animate-fade-in { animation: fadeIn 0.5s ease-out forwards; }
  </style>

  <!-- Script Modal -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const modal = document.getElementById("editProfileModal");
      const openBtn = document.getElementById("editProfileBtn");
      const closeBtn = document.getElementById("cancelEdit");

      openBtn.addEventListener("click", () => modal.classList.remove("hidden"));
      closeBtn.addEventListener("click", () => modal.classList.add("hidden"));
    });
  </script>
</body>
</html>
