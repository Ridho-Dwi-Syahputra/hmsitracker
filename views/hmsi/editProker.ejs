<% var old = typeof old !== 'undefined' ? old : {}; %>
<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'Program Kerja', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-10">
        <h1 class="text-2xl font-bold">Edit Program Kerja</h1>
        <p class="text-sm text-orange-100">Perbarui detail program kerja di bawah</p>
      </div>

      <!-- Body Card -->
      <div class="p-6 sm:p-8 space-y-10">

        <!-- Alert -->
        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <!-- Form -->
        <form action="/hmsi/proker/<%= proker.id_ProgramKerja %>/edit" method="POST" enctype="multipart/form-data" class="space-y-10" data-mode="edit">

          <!-- Informasi Dasar -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Dasar</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

              <!-- Nama Proker -->
              <div class="md:col-span-2 bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Nama Program Kerja</label>
                <input type="text" name="namaProker"
                  value="<%= old.namaProker || proker.Nama_ProgramKerja || '' %>" required
                  placeholder="Masukkan nama program kerja..."
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Penanggung Jawab -->
              <div class="md:col-span-2 bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Penanggung Jawab</label>
                <input type="text" name="penanggungJawab"
                  value="<%= old.penanggungJawab || proker.Penanggung_jawab || '' %>" required
                  placeholder="Masukkan nama penanggung jawab..."
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Tanggal Mulai -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Tanggal Mulai</label>
                <input type="date" name="tanggal_mulai"
                  value="<%= old.tanggal_mulai || proker.tanggal_mulaiFormatted || '' %>" required
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Tanggal Selesai -->
              <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Tanggal Selesai</label>
                <input type="date" name="tanggal_selesai"
                  value="<%= old.tanggal_selesai || proker.tanggal_selesaiFormatted || '' %>" required
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              </div>

              <!-- Deskripsi -->
              <div class="md:col-span-2 bg-orange-50 border border-orange-200 rounded-xl p-4">
                <label class="block text-sm font-medium text-orange-700 mb-2">Deskripsi Program</label>
                <textarea name="deskripsi" rows="4" required
                  placeholder="Tuliskan deskripsi program kerja..."
                  class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm resize-none focus:border-orange-500 focus:ring-2 focus:ring-orange-200"><%= old.deskripsi || proker.Deskripsi || '' %></textarea>
              </div>
            </div>
          </div>

          <!-- Dokumen Pendukung -->
          <div>
            <h4 class="text-lg font-semibold text-orange-600 mb-1">File Dokumen Pendukung</h4>
            <p class="text-sm text-gray-500 mb-4">Upload file rancangan program kerja</p>

            <div id="dropzone"
              class="border-2 border-dashed border-orange-300 rounded-xl p-10 bg-orange-50/30 text-center cursor-pointer 
                     transition duration-200 hover:border-orange-500 hover:bg-orange-100/50 flex flex-col items-center gap-4">

              <!-- Hidden file input -->
              <input type="file" name="dokumen_pendukung" id="fileUpload" class="hidden" accept=".pdf,.jpg,.jpeg,.png"/>

              <div class="text-4xl text-gray-400">ðŸ“„</div>

              <label for="fileUpload" class="cursor-pointer">
                <span class="px-6 py-3 bg-orange-500 text-white rounded-lg text-sm font-medium transition duration-200 hover:bg-orange-600 hover:shadow-md active:scale-95">
                  Pilih File atau Drag & Drop
                </span>
              </label>

              <p class="text-sm text-gray-600">
                Format didukung: <span class="font-medium">PDF, JPG, JPEG, PNG</span><br>
                Maksimal ukuran: <span class="font-medium">5MB</span>
              </p>
            </div>

            <p id="fileName" class="text-sm text-gray-600 mt-3"></p>

            <% if (proker && proker.Dokumen_pendukung) { %>
              <div class="mt-3 p-3 bg-gray-50 border rounded-lg text-sm">
                <p class="font-semibold mb-2">ðŸ“‚ File sebelumnya:</p>
                <% if (/\.(jpg|jpeg|png)$/i.test(proker.Dokumen_pendukung)) { %>
                  <img src="/uploads/<%= proker.Dokumen_pendukung %>" alt="Preview" class="max-h-40 rounded-lg shadow">
                <% } else if (/\.pdf$/i.test(proker.Dokumen_pendukung)) { %>
                  <a href="/uploads/<%= proker.Dokumen_pendukung %>" target="_blank" class="text-blue-600 underline">
                    <%= proker.Dokumen_pendukung %>
                  </a>
                <% } %>
              </div>
            <% } %>
          </div>

          <!-- Tombol -->
          <div class="pt-6 border-t border-gray-100 flex gap-4 justify-end">
            <a href="/hmsi/kelola-proker"
              class="px-8 py-3 border border-gray-300 rounded-xl text-sm font-medium bg-white text-gray-700 transition-all duration-200 hover:shadow-md">
              Batal
            </a>
            <button type="submit" id="submitBtn"
              class="flex items-center justify-center gap-2 px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold transition-all duration-200 hover:bg-orange-600">
              <span id="btnText">Update</span>
              <div id="btnSpinner" class="hidden w-4 h-4 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
            </button>
          </div>

        </form>

      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const input = document.getElementById("fileUpload");
      const fileName = document.getElementById("fileName");

      input.addEventListener("change", () => {
        if (input.files.length > 0) {
          fileName.textContent = "File dipilih: " + input.files[0].name;
        } else {
          fileName.textContent = "";
        }
      });
    });
  </script>
</body>
</html>
