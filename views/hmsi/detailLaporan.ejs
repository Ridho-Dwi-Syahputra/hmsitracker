<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'Laporan', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div id="laporanContent" class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header Card -->
      <div class="bg-orange-500 text-white px-6 py-10">
        <h1 class="text-2xl font-bold">Detail Laporan</h1>
        <p class="text-sm text-orange-100">Detail lengkap laporan kegiatan</p>
      </div>

      <!-- Body Card -->
      <div class="p-6 sm:p-8 space-y-0">

        <!-- Alert -->
        <%- include('../partials/alert', { errorMsg: errorMsg, successMsg: successMsg }) %>

        <!-- Informasi Dasar -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Dasar</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            
            <!-- Judul Laporan -->
            <div class="col-span-2 bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Judul Laporan</p>
              <p class="text-gray-800"><%= laporan.judul_laporan || '-' %></p>
            </div>

            <!-- Program Kerja -->
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Program Kerja</p>
              <p class="text-gray-800"><%= laporan.namaProker || '-' %></p>
            </div>

            <!-- Tanggal Upload -->
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Tanggal Upload</p>
              <p class="text-gray-800"><%= laporan.tanggalFormatted || '-' %></p>
            </div>

            <!-- Waktu & Tempat -->
            <div class="col-span-2 bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Waktu & Tempat</p>
              <p class="text-gray-800"><%= laporan.waktu_tempat || '-' %></p>
            </div>

            <!-- Deskripsi -->
            <div class="col-span-2 bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Deskripsi Kegiatan</p>
              <p class="text-gray-800 whitespace-pre-line"><%= laporan.deskripsi_kegiatan || '-' %></p>
            </div>
          </div>
        </div>

        <!-- Informasi Keuangan -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Informasi Keuangan</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Sumber Dana</p>
              <p class="text-gray-800"><%= laporan.sumber_dana || '-' %></p>
            </div>
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Dana Terpakai (Rp)</p>
              <p class="text-gray-800"><%= laporan.dana_digunakan || '-' %></p>
            </div>
          </div>
        </div>

        <!-- Target Pencapaian -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Target Pencapaian</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Target Kuantitatif (%)</p>
              <p class="text-gray-800"><%= laporan.persentase_kuantitatif || '-' %></p>
            </div>
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Target Kualitatif (%)</p>
              <p class="text-gray-800"><%= laporan.persentase_kualitatif || '-' %></p>
            </div>
          </div>
        </div>

        <!-- Kendala & Solusi -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Kendala dan Solusi</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm">
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Kendala</p>
              <p class="text-gray-800 whitespace-pre-line"><%= laporan.kendala || '-' %></p>
            </div>
            <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
              <p class="font-medium text-orange-700">Solusi</p>
              <p class="text-gray-800 whitespace-pre-line"><%= laporan.solusi || '-' %></p>
            </div>
          </div>
        </div>

        <!-- Sasaran -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Sasaran Kegiatan</h4>
          <div class="bg-orange-50 border border-orange-200 rounded-xl p-4">
            <p class="text-gray-800"><%= laporan.sasaran || '-' %></p>
          </div>
        </div>

        <!-- Dokumentasi -->
        <div>
          <h4 class="text-lg font-semibold text-orange-600 mb-4">Dokumentasi</h4>
          <% if (laporan.dokumentasi) { %>
            <div class="space-y-4 bg-orange-50 border border-orange-200 rounded-xl p-4">
              <% if (laporan.dokumentasi_mime === 'application/pdf') { %>
                <embed src="/uploads/<%= laporan.dokumentasi %>" type="application/pdf" width="100%" height="420px" class="rounded-lg border"/>
              <% } else if (laporan.dokumentasi_mime === 'image/jpeg' || laporan.dokumentasi_mime === 'image/png') { %>
                <img src="/uploads/<%= laporan.dokumentasi %>" alt="Dokumentasi" class="rounded-lg border max-h-96 object-contain mx-auto"/>
              <% } else { %>
                <p class="text-sm text-gray-500">Preview tidak tersedia, silakan unduh.</p>
              <% } %>
              <a href="/uploads/<%= laporan.dokumentasi %>"
                 class="inline-block px-4 py-2 bg-orange-500 text-white rounded-lg text-sm font-medium hover:bg-orange-600 transition">
                Download Dokumentasi
              </a>
            </div>
          <% } else { %>
            <p class="text-gray-500 text-sm">Belum ada dokumentasi diunggah</p>
          <% } %>
        </div>

        <!-- Tombol Aksi -->
        <div class="pt-6 border-t border-gray-100 flex justify-between items-center no-print">
          <a href="/hmsi/laporan" 
             class="px-4 py-2 border border-gray-400 text-gray-600 rounded-xl hover:bg-gray-100">
            Kembali
          </a>
          <a href="/hmsi/laporan/edit/<%= laporan.id_laporan %>"
             class="px-6 py-3 bg-orange-500 text-white rounded-xl text-sm font-semibold hover:bg-orange-600 transition transform hover:scale-105 active:scale-95">
            Edit Laporan
          </a>
        </div>

      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Print-friendly -->
  <style>
    @media print {
      body { background: white; }
      .no-print, .lg\:ml-80 { display: none !important; }
      #laporanContent { box-shadow: none; border: none; }
    }
  </style>

</body>
</html>
