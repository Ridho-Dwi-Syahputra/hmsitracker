<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: typeof unreadCount !== 'undefined' ? unreadCount : 0 }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'Laporan', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-5xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-gray-200">

      <!-- Header -->
      <div class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-6 py-6 flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold">Detail Laporan</h1>
          <p class="text-sm text-orange-100">Informasi lengkap laporan kegiatan HMSI</p>
        </div>
        <a href="/hmsi/laporan"
          class="flex items-center gap-2 px-4 py-2 bg-white/20 hover:bg-white/30 text-white rounded-lg transition-all">
          <i class="fa-solid fa-arrow-left text-sm"></i>
          <span class="font-medium">Kembali</span>
        </a>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8 space-y-10">

        <!-- Alert Messages -->
        <% if (successMsg) { %>
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg flex items-center gap-2">
            <i class="fa-solid fa-check-circle"></i>
            <span><%= successMsg %></span>
          </div>
        <% } %>
        <% if (errorMsg) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg flex items-center gap-2">
            <i class="fa-solid fa-exclamation-circle"></i>
            <span><%= errorMsg %></span>
          </div>
        <% } %>

        <!-- Reusable Component -->
        <%
        function boxField(label, value) {
          const displayValue = value || '-';
        %>
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
            <p class="font-medium text-gray-600 mb-2"><%= label %></p>
            <div class="bg-white border border-gray-200 p-3 rounded-lg">
              <p class="text-gray-800 whitespace-pre-line"><%= displayValue %></p>
            </div>
          </div>
        <% } %>

        <!-- Informasi Dasar -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Informasi Dasar</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
              <%= boxField("Judul Laporan", laporan.judul_laporan) %>
            </div>
            <%= boxField("Program Kerja", laporan.namaProker) %>
            <%= boxField("Divisi", laporan.divisi) %>
            <%= boxField("Tanggal Pelaksanaan", laporan.tanggalFormatted) %>
            <%= boxField("Waktu & Tempat", laporan.waktu_tempat) %>
            <div class="md:col-span-2">
              <%= boxField("Deskripsi Kegiatan", laporan.deskripsi_kegiatan) %>
            </div>
          </div>
        </section>

        <!-- Informasi Keuangan -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Informasi Keuangan</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%= boxField("Sumber Dana", laporan.sumber_dana) %>
            <%
              let danaDisplay = '-';
              if (laporan.dana_digunakan) {
                const dana = parseInt(laporan.dana_digunakan);
                if (!isNaN(dana)) {
                  danaDisplay = `Rp ${dana.toLocaleString('id-ID')}`;
                }
              }
            %>
            <%= boxField("Dana Terpakai", danaDisplay) %>
          </div>
        </section>

        <!-- Target Pencapaian -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Target Pencapaian</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%
              const kuantitatifDisplay = laporan.persentase_kuantitatif ? `${laporan.persentase_kuantitatif}%` : '-';
              const kualitatifDisplay = laporan.persentase_kualitatif ? `${laporan.persentase_kualitatif}%` : '-';
            %>
            <%= boxField("Target Kuantitatif", kuantitatifDisplay) %>
            <%= boxField("Target Kualitatif", kualitatifDisplay) %>
          </div>
        </section>

        <!-- Kendala & Solusi -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Kendala dan Solusi</h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <%= boxField("Kendala", laporan.kendala || "Tidak ada kendala yang dilaporkan") %>
            <%= boxField("Solusi", laporan.solusi || "Tidak ada solusi yang dilaporkan") %>
          </div>
        </section>

        <!-- Sasaran -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Sasaran Kegiatan</h4>
          <%= boxField("Sasaran", laporan.sasaran) %>
        </section>

        <!-- Dokumentasi -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Dokumentasi</h4>
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-4">
            <% if (laporan.dokumentasi) { %>
              <div class="bg-white border border-gray-200 p-3 rounded-lg">
                <% if (laporan.dokumentasi_mime === 'application/pdf') { %>
                  <embed src="/uploads/<%= laporan.dokumentasi %>" type="application/pdf" width="100%" height="500px"/>
                <% } else { %>
                  <img src="/uploads/<%= laporan.dokumentasi %>" class="w-full max-h-96 object-contain rounded-lg" alt="Dokumentasi"/>
                <% } %>
              </div>
            <% } else { %>
              <div class="bg-white border border-gray-200 p-3 rounded-lg">
                <p class="text-gray-500 italic">Belum ada dokumentasi</p>
              </div>
            <% } %>
          </div>
        </section>

        <!-- Status Evaluasi DPA -->
        <section>
          <h4 class="text-lg font-semibold text-gray-700 mb-4">Status Evaluasi DPA</h4>
          
          <% if (laporan.status_konfirmasi === 'Selesai') { %>
            <!-- Info Message untuk Status Selesai -->
            <div class="p-4 bg-green-50 border border-green-200 rounded-xl flex items-center gap-3">
              <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-green-800">Evaluasi Telah Selesai</p>
                <p class="text-xs text-green-600">Laporan ini telah dievaluasi dan disetujui oleh DPA. Laporan tidak dapat diubah lagi.</p>
              </div>
            </div>
          <% } else if (laporan.status_konfirmasi === 'Pending') { %>
            <!-- Info Message untuk Status Pending -->
            <div class="p-4 bg-blue-50 border border-blue-200 rounded-xl flex items-center gap-3">
              <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-blue-800">Sedang Dalam Proses</p>
                <p class="text-xs text-blue-600">Laporan sedang dalam proses evaluasi oleh DPA. Mohon tunggu hingga selesai.</p>
              </div>
            </div>
          <% } else { %>
            <!-- Info Message untuk Belum Ada Evaluasi -->
            <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-xl flex items-center gap-3">
              <div class="w-8 h-8 bg-yellow-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-yellow-800">Menunggu Evaluasi</p>
                <p class="text-xs text-yellow-600">Laporan belum dievaluasi. Silakan tunggu DPA untuk mengevaluasi laporan ini.</p>
              </div>
            </div>
          <% } %>
        </section>
      </div>
    </div>
  </main>

  <!-- Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Detail laporan HMSI loaded');
    });
  </script>

</body>
</html>