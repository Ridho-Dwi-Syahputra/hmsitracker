<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Edit Profil HMSI</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-orange-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include('../partials/navbarHMSI', { user: user }) %>

  <!-- Sidebar -->
  <%- include('../partials/sidebarHMSI', { activeNav: 'profile', user: user }) %>

  <!-- Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- Header -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Edit Profil</h1>
        <p class="text-sm text-orange-100">Perbarui informasi akun Anda</p>
      </div>

      <!-- Body -->
      <div class="p-6 sm:p-8 space-y-6">

        <!-- Flash Messages -->
        <% if (errorMsg && errorMsg.length > 0) { %>
          <% errorMsg.forEach(msg => { %>
            <div class="p-4 bg-red-100 text-red-700 rounded-xl text-sm mb-2"><%= msg %></div>
          <% }) %>
        <% } %>
        <% if (successMsg && successMsg.length > 0) { %>
          <% successMsg.forEach(msg => { %>
            <div class="p-4 bg-green-100 text-green-700 rounded-xl text-sm mb-2"><%= msg %></div>
          <% }) %>
        <% } %>

        <!-- Form -->
        <form id="editProfileForm"
              action="/hmsi/profile/update"
              method="POST"
              enctype="multipart/form-data"
              class="space-y-6">

          <!-- Foto Profil -->
          <div class="flex flex-col items-center gap-4">
            <img id="previewFoto"
                 src="/<%= user.foto_profile || 'default-profile.png' %>?v=<%= Date.now() %>"
                 class="w-28 h-28 rounded-full border-4 border-orange-200 shadow-md object-cover"
                 alt="Foto Profil"
                 onerror="this.onerror=null;this.src='/default-profile.png?v=<%= Date.now() %>'">

            <input type="file" id="fotoInput" name="foto_profile" accept="image/*" class="hidden">
            <label for="fotoInput"
                   class="cursor-pointer px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-xl text-sm font-medium transition">
              Ganti Foto
            </label>
          </div>

          <!-- NIM -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">
              NIM <span class="text-red-500">*</span>
            </label>
            <input type="text" name="id_anggota" value="<%= user.id_anggota %>" required
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
          </div>

          <!-- Nama -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">
              Nama <span class="text-red-500">*</span>
            </label>
            <input type="text" name="nama" value="<%= user.nama || user.name %>" required
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
          </div>

          <!-- Email -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Email</label>
            <input type="email" name="email" value="<%= user.email %>"
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
          </div>

          <!-- Divisi -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">
              Divisi <span class="text-red-500">*</span>
            </label>
            <select name="id_divisi" required
                    class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              <option value="">-- Pilih Divisi --</option>
              <% if (divisiList && divisiList.length > 0) { %>
                <% divisiList.forEach(d => { %>
                  <option value="<%= d.id_divisi %>" <%= user.id_divisi === d.id_divisi ? 'selected' : '' %>><%= d.nama_divisi %></option>
                <% }) %>
              <% } %>
            </select>
          </div>

          <!-- Password Baru -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Password Baru</label>
            <div class="relative">
              <input type="password" id="password" name="password"
                     class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm pr-10 focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              <button type="button" onclick="togglePassword('password','eye1')"
                      class="absolute inset-y-0 right-3 flex items-center text-gray-500">
                <i id="eye1" class="fa-solid fa-eye"></i>
              </button>
            </div>
          </div>

          <!-- Konfirmasi Password -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Konfirmasi Password</label>
            <div class="relative">
              <input type="password" id="confirm_password" name="confirm_password"
                     class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm pr-10 focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
              <button type="button" onclick="togglePassword('confirm_password','eye2')"
                      class="absolute inset-y-0 right-3 flex items-center text-gray-500">
                <i id="eye2" class="fa-solid fa-eye"></i>
              </button>
            </div>
          </div>

          <p class="text-xs text-red-500">Field dengan tanda (<span class="font-bold">*</span>) wajib diisi</p>

          <!-- Tombol -->
          <div class="pt-6 border-t border-gray-100 flex gap-4 justify-end">
            <a href="/hmsi/profile"
               class="px-8 py-3 border border-gray-300 rounded-xl text-sm font-medium bg-white text-gray-700 transition-all duration-200 hover:shadow-md">
              Kembali
            </a>
            <button type="submit"
                    class="flex items-center justify-center gap-2 px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold transition-all duration-200 hover:bg-orange-600">
              Simpan Perubahan
            </button>
          </div>

        </form>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- JS -->
  <script>
    function togglePassword(inputId, eyeId) {
      const input = document.getElementById(inputId);
      const eye = document.getElementById(eyeId);
      if (input.type === "password") {
        input.type = "text";
        eye.classList.replace("fa-eye", "fa-eye-slash");
      } else {
        input.type = "password";
        eye.classList.replace("fa-eye-slash", "fa-eye");
      }
    }

    // Preview foto sebelum submit
    const fotoInput = document.getElementById("fotoInput");
    const previewFoto = document.getElementById("previewFoto");
    fotoInput.addEventListener("change", e => {
      const file = e.target.files[0];
      if (file) previewFoto.src = URL.createObjectURL(file);
    });
  </script>
</body>
</html>
