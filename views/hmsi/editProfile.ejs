<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Edit Profil HMSI</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- ✅ Navbar -->
  <%- include('../partials/navbarHMSI', { user: user, unreadCount: unreadCount }) %>

  <!-- ✅ Sidebar -->
  <%- include('../partials/sidebarHMSI', { user: user, activeNav: 'Profil' }) %>

  <!-- ✅ Wrapper -->
  <main class="lg:ml-80 px-6 pt-20 pb-8 flex-grow">
    <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-2xl overflow-hidden border border-orange-200">

      <!-- ✅ Header Card -->
      <div class="bg-orange-500 text-white px-6 py-6">
        <h1 class="text-2xl font-bold">Edit Profil HMSI</h1>
        <p class="text-sm text-orange-100">Perbarui informasi akun HMSI Anda</p>
        <p class="text-xs text-orange-100 mt-1 italic">Divisi: <%= user.nama_divisi || user.divisi || '-' %></p>
      </div>

      <!-- ✅ Body Card -->
      <div class="p-6 sm:p-8 space-y-6">

        <!-- Flash Messages -->
        <% if (errorMsg && errorMsg.length > 0) { %>
          <% errorMsg.forEach(msg => { %>
            <div class="p-4 bg-red-100 text-red-700 rounded-xl text-sm mb-2"><%= msg %></div>
          <% }) %>
        <% } %>
        <% if (successMsg && successMsg.length > 0) { %>
          <% successMsg.forEach(msg => { %>
            <div class="p-4 bg-green-100 text-green-700 rounded-xl text-sm mb-2"><%= msg %></div>
          <% }) %>
        <% } %>

        <!-- ✅ Form -->
        <form id="editProfileForm" action="/hmsi/profile/update" method="POST" enctype="multipart/form-data" class="space-y-6">

          <!-- Foto Profil -->
          <div class="flex flex-col items-center gap-4">
            <img id="previewFoto"
                 src="/<%= user.foto_profile || 'default-profile.png' %>?v=<%= Date.now() %>"
                 class="w-28 h-28 rounded-full border-4 border-orange-200 shadow-md object-cover"
                 alt="Foto Profil"
                 onerror="this.onerror=null;this.src='/default-profile.png?v=<%= Date.now() %>'">

            <input type="file" id="fotoInput" name="foto_profile" accept="image/*" class="hidden">
            <label for="fotoInput"
                   class="cursor-pointer px-4 py-2 bg-orange-500 hover:bg-orange-600 text-white rounded-xl text-sm font-medium transition">
              Ganti Foto
            </label>
          </div>

          <!-- NIM -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">NIM <span class="text-red-500">*</span></label>
            <input type="text" name="id_anggota" id="id_anggota" value="<%= user.id_anggota %>" required
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200 hover:border-orange-300 transition-all">
          </div>

          <!-- Nama -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Nama <span class="text-red-500">*</span></label>
            <input type="text" name="nama" id="nama" value="<%= user.nama %>" required
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200 hover:border-orange-300 transition-all">
          </div>

          <!-- ✅ Divisi (readonly, pakai nama_divisi) -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Divisi</label>
            <input type="text" value="<%= user.nama_divisi || user.divisi || '-' %>" readonly
                   class="w-full px-4 py-3 border border-orange-200 bg-gray-100 rounded-lg text-sm text-gray-700 cursor-not-allowed">
          </div>

          <!-- Password -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Password Baru</label>
            <input type="password" id="password" name="password"
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
          </div>

          <!-- Konfirmasi Password -->
          <div>
            <label class="block text-sm font-medium text-orange-700 mb-2">Konfirmasi Password</label>
            <input type="password" id="confirm_password" name="confirm_password"
                   class="w-full px-4 py-3 border border-orange-200 rounded-lg text-sm focus:border-orange-500 focus:ring-2 focus:ring-orange-200">
          </div>

          <p class="text-xs text-red-500">Field dengan tanda (<span class="font-bold">*</span>) wajib diisi</p>

          <!-- Tombol -->
          <div class="pt-6 border-t border-gray-100 flex gap-4 justify-end">
            <a href="/hmsi/profile"
               class="px-8 py-3 border border-gray-300 rounded-xl text-sm font-medium bg-white text-gray-700 hover:shadow-md hover:border-gray-400">
              Kembali
            </a>
            <button type="submit"
                    class="px-8 py-3 text-white bg-orange-500 rounded-xl text-sm font-semibold hover:bg-orange-600 hover:shadow-md transition">
              Simpan Perubahan
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>

 
  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- JS -->
  <script>
    // Modal functions
    function showModal(modalId) {
      const modal = document.getElementById(modalId);
      const content = document.getElementById(modalId + 'Content');

      modal.classList.remove('hidden');

      // Trigger animation
      setTimeout(() => {
        content.classList.remove('scale-95', 'opacity-0');
        content.classList.add('scale-100', 'opacity-100');
      }, 10);
    }

    function hideModal(modalId) {
      const modal = document.getElementById(modalId);
      const content = document.getElementById(modalId + 'Content');

      content.classList.remove('scale-100', 'opacity-100');
      content.classList.add('scale-95', 'opacity-0');

      setTimeout(() => {
        modal.classList.add('hidden');
      }, 300);
    }

    // Modal event listeners
    document.getElementById('closeSuccessModal').addEventListener('click', () => {
      hideModal('successModal');
      setTimeout(() => {
        window.location.href = '/hmsi/profile';
      }, 300);
    });

    document.getElementById('closeErrorModal').addEventListener('click', () => {
      hideModal('errorModal');
    });

    document.getElementById('closeValidationModal').addEventListener('click', () => {
      hideModal('validationModal');
    });

    document.getElementById('closePasswordMismatchModal').addEventListener('click', () => {
      hideModal('passwordMismatchModal');
    });

    // Close modal when clicking outside
    ['successModal', 'errorModal', 'validationModal', 'passwordMismatchModal'].forEach(modalId => {
      document.getElementById(modalId).addEventListener('click', (e) => {
        if (e.target.id === modalId) {
          hideModal(modalId);
        }
      });
    });

    function togglePassword(inputId, eyeId) {
      const input = document.getElementById(inputId);
      const eye = document.getElementById(eyeId);

      if (input.type === "password") {
        input.type = "text";
        eye.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.97 9.97 0 012.396-3.742m3.126-2.212A9.956 9.956 0 0112 5c4.478 0 8.268 2.943 9.542 7a9.969 9.969 0 01-4.043 5.066M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`;
      } else {
        input.type = "password";
        eye.innerHTML = `
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>`;
      }
    }

    // Preview foto sebelum submit
    const fotoInput = document.getElementById("fotoInput");
    const previewFoto = document.getElementById("previewFoto");
    fotoInput.addEventListener("change", (e) => {
      const file = e.target.files[0];
      if (file) {
        // Validate file size (max 5MB)
        if (file.size > 5 * 1024 * 1024) {
          const errorDiv = fotoInput.closest('div').querySelector('.error-message');
          errorDiv.textContent = 'Ukuran file maksimal 5MB';
          errorDiv.classList.remove('hidden');
          fotoInput.value = '';
          return;
        }

        // Validate file type
        if (!file.type.startsWith('image/')) {
          const errorDiv = fotoInput.closest('div').querySelector('.error-message');
          errorDiv.textContent = 'File harus berupa gambar';
          errorDiv.classList.remove('hidden');
          fotoInput.value = '';
          return;
        }

        // Hide error and show preview
        const errorDiv = fotoInput.closest('div').querySelector('.error-message');
        errorDiv.classList.add('hidden');
        previewFoto.src = URL.createObjectURL(file);
      }
    });

    // Form validation
    function validateField(field) {
      const errorDiv = field.closest('div').querySelector('.error-message');
      if (!errorDiv) return true;

      let isValid = true;
      let errorMessage = '';

      // Check required fields
      if (field.hasAttribute('required') && field.value.trim() === '') {
        isValid = false;
        errorMessage = 'Field ini wajib diisi';
      }

      if (!isValid) {
        errorDiv.textContent = errorMessage;
        errorDiv.classList.remove('hidden');
        field.classList.add('border-red-500');
        field.classList.remove('border-orange-200');
      } else {
        errorDiv.classList.add('hidden');
        field.classList.remove('border-red-500');
        field.classList.add('border-orange-200');
      }

      return isValid;
    }

    function validateAllFields() {
      let allValid = true;
      let emptyFields = [];

      const requiredFields = [
        { id: 'id_anggota', name: 'NIM' },
        { id: 'nama', name: 'Nama' }
      ];

      requiredFields.forEach(fieldInfo => {
        const field = document.getElementById(fieldInfo.id);
        if (field && field.value.trim() === '') {
          allValid = false;
          emptyFields.push(fieldInfo.name);
          validateField(field);
        }
      });

      // Check password match
      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirm_password').value;

      if (password || confirmPassword) {
        if (password !== confirmPassword) {
          allValid = false;
          return 'password_mismatch';
        }
      }

      if (!allValid && emptyFields.length > 0) {
        let message = '';
        if (emptyFields.length === 1) {
          message = `Field "${emptyFields[0]}" wajib diisi.`;
        } else if (emptyFields.length === 2) {
          message = `Field "${emptyFields[0]}" dan "${emptyFields[1]}" wajib diisi.`;
        }

        document.getElementById('validationMessage').textContent = message;
        return 'validation_error';
      }

      return allValid;
    }

    // Add real-time validation
    document.querySelectorAll('input[required]').forEach(field => {
      field.addEventListener('blur', () => validateField(field));
      field.addEventListener('input', () => {
        if (field.classList.contains('border-red-500')) {
          validateField(field);
        }
      });
    });

    // Form submission
    const form = document.getElementById('editProfileForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = document.getElementById('btnText');
    const btnSpinner = document.getElementById('btnSpinner');

    form.addEventListener('submit', (e) => {
      e.preventDefault();

      // Validate all fields
      const validationResult = validateAllFields();
      if (validationResult === 'validation_error') {
        showModal('validationModal');
        return;
      } else if (validationResult === 'password_mismatch') {
        showModal('passwordMismatchModal');
        return;
      }

      // Show loading state
      submitBtn.disabled = true;
      btnText.textContent = 'Menyimpan...';
      btnSpinner.classList.remove('hidden');

      // Submit form
      const formData = new FormData(form);

      fetch(form.action, {
        method: 'POST',
        body: formData
      })
      .then(response => {
        if (response.ok) {
          showModal('successModal');
        } else {
          return response.text().then(text => {
            throw new Error(text || 'Terjadi kesalahan saat menyimpan profil');
          });
        }
      })
      .catch(error => {
        console.error('Error:', error);
        document.getElementById('errorMessage').textContent = 'Terjadi kesalahan: ' + error.message;
        showModal('errorModal');
      })
      .finally(() => {
        submitBtn.disabled = false;
        btnText.textContent = 'Simpan Perubahan';
        btnSpinner.classList.add('hidden');
      });
    });
  </script>
</body>
</html>
