<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | HMSI Tracker</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen relative overflow-hidden transition-opacity duration-700 ease-out">

  <!-- Background dengan foto kampus -->
  <div class="absolute inset-0 bg-cover bg-center bg-no-repeat"
       style="background-image: url('/images/fti_unand.jpg');"></div>

  <!-- Orange gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-t from-orange-600/80 via-orange-500/60 to-orange-400/30"></div>

  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-black/20"></div>

  <!-- Main Content -->
  <div class="relative z-10 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-sm rounded-3xl shadow-2xl p-8 w-full max-w-md border border-white/30">

      <!-- Logo -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-orange-100 rounded-2xl mb-4">
          <!-- SVG Logo -->
          <svg class="w-12 h-12 text-orange-500" fill="currentColor" viewBox="0 0 64 64">
            <rect x="8" y="16" width="48" height="28" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>
            <rect x="28" y="44" width="8" height="8" fill="currentColor"/>
            <rect x="20" y="52" width="24" height="4" fill="currentColor"/>
            <path d="M16 36 L24 30 L32 24 L40 28 L48 22" stroke="currentColor" stroke-width="2.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M42 24 L48 22 L46 28" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-800 mb-2">HMSI Tracker</h1>
        <p class="text-gray-600">Sistem Monitoring Program Kerja</p>
      </div>

      <!-- Form -->
      <form action="/auth/login" method="POST" class="space-y-6">

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
          <input type="email" id="email" name="email"
                 class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white text-sm font-normal
                        focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-100"
                 placeholder="Masukkan email Anda" required>
        </div>

        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
          <input type="password" id="password" name="password"
                 class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white text-sm font-normal
                        focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-100"
                 placeholder="Masukkan password Anda" required>
        </div>

        <!-- Role
        <div>
          <label for="role" class="block text-sm font-semibold text-gray-700 mb-2">Login Sebagai</label>
          <select name="role" id="role"
                  class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-white text-sm font-normal
                         focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-100">
            <option value="HMSI">HMSI</option>
            <option value="DPA">DPA</option>
            <option value="Admin">Admin</option>
          </select>
        </div> -->

        <!-- Remember me & Forgot password -->
        <div class="flex items-center justify-between">
          <label class="flex items-center cursor-pointer">
            <input type="checkbox" name="rememberMe" class="w-4 h-4 text-orange-500 border-gray-300 rounded focus:ring-orange-200 focus:ring-2">
            <span class="ml-2 text-sm text-gray-600">Remember Me</span>
          </label>
          <a href="#" class="text-sm text-orange-500 hover:text-orange-600 font-medium">Lupa Password?</a>
        </div>

        <!-- Submit -->
        <button type="submit"
                class="w-full py-4 px-6 bg-orange-500 hover:bg-orange-600 text-white font-semibold rounded-xl
                       transition-all duration-200 transform hover:-translate-y-1 hover:shadow-lg active:scale-95">
          Log In
        </button>
      </form>
    </div>
  </div>
</body>
</html>
